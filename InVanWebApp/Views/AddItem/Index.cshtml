@model IEnumerable<InVanWebApp.DAL.Item>
@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Item</title>
</head>
<body>
    <div style="margin-top: -18px; margin-left: -20px; background: white;">
        <ul class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="@Url.Action("Index","Dashboard")">Master</a></li>
            <li class="active">/Add Item</li>
        </ul>
    </div>
    <div class="box box-primary; panel-body" runat="server" id="divPanel1" style="margin-top: -10px;
    margin-left: -20px;">
        <div class="box-header">
            <h4 class="box-title" style="margin-left: -900px;">Add Item</h4>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.ActionLink("Add Item", "AddItems")
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Item Category")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Item Code")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Item Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Unit")
                                    </th>
                                    <th>
                                        @Html.DisplayName("HSN Code")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Current Stock")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Price")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Tax")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Description")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Edit/Delete")
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemCategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Item_Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Item_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HSN_Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Current_Stock)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tax)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditItem", new { Item_ID = item.Item_ID }) |
                                            @Html.ActionLink("Delete", "DeleteItem", new { Item_ID = item.Item_ID })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>