﻿@model InVanWebApp_BO.BatchPlanningMasterBO
@{ ViewBag.Title = "ViewBatchPlanning";
    Layout = "~/Views/Shared/MainMaster.cshtml"; }

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Batch Planning</title>
    <style>
        html2canvas-container {
            width: 3000px !important;
            height: 2000px !important;
        }

        #submissionTable tr td {
            white-space: normal;
            table-layout: auto;
            border-color: darkgrey;
            font-size: 110%;
            width: -1%;
            /*width: 100%;*/
        }

        #submissionTablelabel {
            font-size: 120%;
        }

        #submissionTable th {
            white-space: normal;
            border-color: darkgrey;
            font-size: 120%;
        }

        hr {
            color: black;
            height: -1%
        }
    </style>
</head>
<body>
    @Html.HiddenFor(model => model.ID)
    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()
                <div class="row" id="printV" width="1000px">
                    <div class="col-md-12  grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <img class="align-self-center" src="~/Theme/MainContent/images/Logo.svg" alt="client-logo" style="width:10%;">
                                    <h3 class="card-title font-weight-bold align-self-center col-4 mb-0" style="font-size: 30pt;">Batch Planning</h3>

                                    <div class="col">
                                        <div class="col-md-12">
                                            @*<img src="~/Theme/MainContent/images/ICON.png.png" id="btnExport" class="float-right" style="width:45px;height:45px" />*@
                                            @*//Vedant added "ExportPdf" 13-07-23.*@ 
                                            <a id="ExportPdf" href="@Url.Action("ExportAsPDF", "BatchPlanning")"> <img class="float-left" src="~/Theme/MainContent/images/ICON.png.png" style="width: 45px; height: 45px; padding-top: 1px; margin-top: 2%; margin-left: 500px" /> </a>
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="col-md-12">
                                    <div style="font-size:110%; color:black;">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Document Number</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.BatchPlanningDocumentNo)
                                            </div>
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Planning Date</label>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.TextBoxFor(model => model.CreatedDate, "{0:yyyy-MM-dd HH:mm:ss}", new { style = "border:none; color:black; padding-top:1%; padding-left: 0.05%;font-size: 100%;", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">SO Number</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.SONumber)
                                            </div>
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Work Order Number</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.WorkOrderNumber)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Location</label>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DisplayFor(model => model.LocationName)
                                            </div>
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Product</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.ProductName)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-2">
                                                @*Rahul added unitcode '(Kg)' 02-06-2023.*@
                                                <label class="font-weight-bold">Packing Size (Kg)</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.PackingSize)
                                            </div>
                                        </div>                                        
                                        <div class="row">
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Raw Material Yield</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.TotalRawMaterialYeild)
                                            </div>
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Packing Type</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.PackingType)
                                            </div>
                                        </div>                                        
                                        <div class="row">
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Order Quantity</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.OrderQuantity)
                                                @Html.DisplayFor(model => model.OrderQuantityUnit)
                                            </div>
                                            <div class="col-md-2">
                                                <label class="font-weight-bold">Required Quantity</label>
                                            </div>
                                            <div class="col-md-4" style="color:black;">
                                                @Html.DisplayFor(model => model.RequiredQuantityInKG) KG
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-12">
                                            <Center><h5 class="font-weight-bold">Item Details</h5></Center>
                                            <hr />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="table-sorter-wrapper col-lg-12 table-responsive">
                                                    <table class="table table-hover" id="submissionTable">
                                                        <thead>
                                                            <tr>
                                                                <th>Sr. No.</th>
                                                                <th>Item Code</th>
                                                                <th>Item</th>
                                                                <th>Percentage (%)</th>
                                                                <th>Batch Size</th>
                                                                <th>Total Batches</th>
                                                                <th>Yield (%)</th>
                                                                <th>Actual Requirement</th>
                                                                <th>Stock In Hand</th>
                                                                <th>To be Procured</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="myTableBody">
                                                            @{ int c = 1;
                                                                foreach (var item in Model.batchPlanningItemDetails)
                                                                {
                                                <tr id="tablerow_@c">
                                                    <td><label>@c.</label></td>
                                                    <td>@Html.DisplayFor(x => item.ItemCode)</td>
                                                    <td>@Html.DisplayFor(x => item.ItemName)</td>
                                                    <td>@Html.DisplayFor(x => item.QuantityPercentage)</td>
                                                    <td>@Html.DisplayFor(x => item.BatchSize) KG</td>
                                                    <td>@Html.DisplayFor(x => item.TotalQuantityInBatch) KG</td>
                                                    <td>@Html.DisplayFor(x => item.YieldPercentage)</td>
                                                    <td>@Html.DisplayFor(x => item.ActualRequirement) KG</td>
                                                    <td>@Html.DisplayFor(x => item.StockInHand) KG</td>
                                                    <td>@Html.DisplayFor(x => item.ToBeProcured) KG</td>
                                                </tr> { c++; }
                                                                } }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <br />
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.txtItemDetails, new { style = "display:none" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold" style="color:black;">Total Batch Size (Kg)</label>
                                        </div>
                                        <div class="col-md-4" style="color:black;">
                                            @Html.DisplayFor(model => model.TotalBatchSize)
                                        </div>
                                        <div class="col-md-2" style="color:black;">
                                            <label class="font-weight-bold">Total No Batches (Kg)</label>
                                        </div>
                                        <div class="col-md-4" style="color:black;">
                                            @Html.DisplayFor(model => model.TotalNoBatches)
                                        </div>
                                    </div>
                                    <br />

                                    <br />
                                    <a href="@Url.Action("Index", "BatchPlanning")" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b); float: right;" id="btnBack">
                                        Back To List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>}
</body>
</html>

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>

<script src="~/Theme/MainContent/js/jquery.min.js"></script>
<script src="~/Theme/MainContent/jspdf.min.js_1.5.3/unpkg/jspdf.min.js"></script>
<script src="~/Theme/MainContent/jspdf.min.js_1.5.3/unpkg/html2canvas.js"></script>

<script type="text/javascript">
    $('#btnExport').click(function () {
        var printD = document.getElementById("printV");
        $("#btnExport").hide();
        $("#btnBack").hide();
        html2canvas(printD).then(function (canvas) {

            var img = canvas.toDataURL("image/png", 1.0);

            var doc = new jsPDF('p', 'pt', 'a4');

            var specialElementHandlers = {
                '#editor': function (element, renderer) {
                    return true;
                }
            };

            doc.addImage(img, 'JPEG', 5, 5, 580, 480);
            doc.fromHTML(printD, 15, 15, {
                'width': 200,
                // 'margin':[10,60,40,20],
                'elementHandlers': specialElementHandlers
            });
            var currentDate = new Date();
            //var time = getTime();
            var today = new Date();
            var time = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
            console.log(time);
            var today = formatDate(currentDate);
            doc.save('BatchPlanning_' + today + '_' + time + '.pdf');
            $("#btnExport").show();
            $("#btnBack").show();

        });

    });

    function formatDate(date) {
        // alert(date);
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2)
            month = '0' + month;
        if (day.length < 2)
            day = '0' + day;
        return [day, month, year].join('-');
        //return [year, month, day].join('-');
    }
</script>