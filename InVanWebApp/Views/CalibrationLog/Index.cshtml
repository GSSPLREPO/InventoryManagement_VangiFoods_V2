                        $('#ExportExcel').hide();
                    }
                },
                /*"scrollX": true,*/
                "columns": [
                    {
                        "render": function (data, type, full, meta) {
                            return j++;
                        }
                    },
                    { "data": "NameOfEquipment", "autoWidth": true },
                    { "data": "Department", "autoWidth": true },
                    {
