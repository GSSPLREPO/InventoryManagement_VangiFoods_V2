                            var dayString = day > 9 ? day : '0' + day;
                            var year = currentTime.getFullYear();
                            var date = dayString + "/" + monthString + "/" + year;
                            return date;
                        }
                    },
                    { "data": "VerifyByName", "autoWidth": true },
                    {
                        data: "Id", "render": function (data) {
                            return '<button type="button" id="' + data + '" class = "btn text-primary btnEdit"><i class="fa fa-edit"/></i></button> <button type="button" id="'
                                + data + '" class = "btn text-danger btnDelete"><i class="fa fa-trash"/></i></button>'
                        }
                    }
                ]
            });
            //t.on('order.dt search.dt', function () {
            //    let i = 1;

            //    t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
            //        this.data(i++);
            //    });
            //}).draw();
        });

