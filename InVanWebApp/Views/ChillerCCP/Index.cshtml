@model IEnumerable<InVanWebApp_BO.ChillerCCPBO>

@{
    ViewBag.Title = "Chiller CCP";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Stage-4 Chiller CCP</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stage-4 Chiller CCP</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Productions</a>
                    </li>
                    <li class="breadcrumb-item active">Stage-4 Chiller CCP</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddChillerCCP", "ChillerCCP")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Chiller CCP
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                <table class="table table-striped table-bordered hover table-sm" id="ChillerCCPdt">
                                    <thead>
                                        <tr>
                                           
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Water Clorinated")</th>
                                            <th>@Html.DisplayName("Totle Time In Chiller")</th>
                                            <th>@Html.DisplayName("Quantity Of Packed Product")</th>
                                            <th>@Html.DisplayName("No Of Crates")</th>
                                            <th>@Html.DisplayName("Mandatoty Temperature(°C)")</th>
                                            <th>@Html.DisplayName("Verify By")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        
                                            @foreach (var item in Model)
                                            {
                                        <tr>
                                           
                                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                            <td>@Html.DisplayFor(modelItem => item.WaterClorinated)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TotleTimeInChiller)</td>
                                            <td>@Html.DisplayFor(modelItem => item.QuntityOfPakedProduct)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NoOfCrates)</td>
                                            <td>@Html.DisplayFor(modelItem => item.MandatotyTemperature)</td>
                                            <td>@Html.DisplayFor(modelItem => item.VerifyByName)</td>
                                            <td>
                                               
                                                <a href=@Url.Action("EditChillerCCP", "ChillerCCP", new { Id = item.Id }) title="Edit Chiller CCP">
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("Delete", "ChillerCCP", new { Id = item.Id }) onclick="return confirm('Are you sure want to delete?');" title="Delete Chiller CCP">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                     
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

