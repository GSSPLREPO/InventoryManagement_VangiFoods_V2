@model IEnumerable<InVanWebApp_BO.CompanyBO>
@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Item</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Company</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Company</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddCompany","Company")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Company
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                    <table class="table table-striped table-bordered" style="table-layout:fixed;">
                                        <tr>
                                            <th>@Html.DisplayName("Company Name")</th>
                                            <th>@Html.DisplayName("Contact Person")</th>
                                            <th>@Html.DisplayName("Email ID")</th>
                                            <th>@Html.DisplayName("Contact Number")</th>
                                            <th>@Html.DisplayName("Is Active")</th>
                                            <th>@Html.DisplayName("Edit/Delete")</th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ContactPersonName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EmailId)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ContactPersonNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                                <td>
                                                    <a href=@Url.Action("EditCompany", "Company", new { ID = item.ID })>
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("DeleteSupplierCustomer", "Company", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>                                                    
                                                </td>
                                            </tr>
                                        }
                                    </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])