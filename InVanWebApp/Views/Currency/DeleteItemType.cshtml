@model InVanWebApp_BO.ItemTypeBO
@{
    ViewBag.Title = "Delete Item";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
@*<h3>Are you sure you want to delete this?</h3>*@
<div>
    @using (Html.BeginForm("Delete", "ItemType", FormMethod.Post))
    {
        @Html.HiddenFor(i => i.ID)
        <div class="card">
            <div class="card-body">
                <h4>Delete Item Type</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.Label("Item Type")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ItemType)
                    </dd>
                </dl>
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-sm btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    }
</div>
