@model IEnumerable<InVanWebApp_BO.DailyMonitoringBO>

@{
    ViewBag.Title = "Daily Monitoring";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Daily Monitoring</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Daily Monitoring</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Daily Monitoring</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddDailyMonitoring","DailyMonitoring")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Daily Monitoring
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                <table class="table table-striped table-bordered hover table-sm" id="DailyMonitoringdt">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("FGS Area")</th>
                                            <th>@Html.DisplayName("Verify By")</th>
                                            <th>@Html.DisplayName("Edit/Delete")</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                                <td>@Html.DisplayFor(modelItem => item.FgsArea)</td>
                                                <td>@Html.DisplayFor(modelItem => item.VerifyByName)</td>
                                                <td>
                                                    <a href=@Url.Action("EditDailyMonitoring", "DailyMonitoring", new { Id = item.Id })>
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("Delete", "DailyMonitoring", new { Id = item.Id }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

