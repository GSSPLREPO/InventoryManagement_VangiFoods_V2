@model IEnumerable<InVanWebApp_BO.ForeignBodyFoundBO>

@{
    ViewBag.Title = "ForeignBodyFound";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Foreign Body Found</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Foreign Body Found</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Foreign Body Found</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                           
                            <div style="padding-top:15px;">
                                <div class="row">
                                    <div class="col-md-2">
                                        <label>From Date:</label>
                                        <span style="color:red">*</span>
                                    </div>
                                    <div class="col-md-2">
                                        @Html.TextBox("fromDate", "{0:yyyy-MM-dd}", new { @id = "fromDate", @class = "datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedFromDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                        @Html.ValidationMessage("msgfromDate", "", new { id = "fromDateValidate", @class = "col-form-label error mt-2 text-danger" })
                                    </div>
                                    <div class="col-md-2">
                                        <label>To Date:</label>
                                        <span style="color:red">*</span>
                                    </div>
                                    <div class="col-md-2">
                                        @Html.TextBox("toDate", "{0:yyyy-MM-dd}", new { @id = "toDate", @class = " datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedToDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                        @Html.ValidationMessage("toDate", "", new { id = "toDateValidate", @class = "col-form-label error mt-2 text-danger" })
                                    </div>
                                    <div class="col-md-2">
                                        <button id="btnGo" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);float:left;">Go</button>

                                        <a id="ExportPdf" style="float:left;" href="@Url.Action("ExportAsPDF", "ForeignBodyFound")"> <img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                        <a id="ExportExcel" style="float:left;" href="@Url.Action("ExportAsExcel", "ForeignBodyFound")"> <img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                    </div>
                                    <div class="col-md-2">
                                        <a href="@Url.Action("AddForeignBodyFound", "ForeignBodyFound")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                            <span class="fa fa-plus"></span> Foreign Body Found
                                        </a>
                                    </div>
                                </div>
                                <table id="tblForeignBodyFound" class="table table-striped table-bordered hover table-sm table-responsive-md" width="100%" style="table-layout: fixed;">
                                    <thead>
                                        <tr>
                                            @*<th>ID</th>*@
                                            <th>Date</th>
                                            <th>Raw Material</th>
                                            <th>On Going Processing</th>
                                            <th>Batching</th>
                                            <th>Post Processing</th>
                                            <th>Corrective Action</th>
                                            <th>Verify By</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])
@section scripts{
    @*<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />*@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            BindForeignBodyFound();
            setCurrentDate();
        });
        
        function setCurrentDate()
        {
        var now = new Date();
        var day = ("0" + now.getDate()).slice(-2);
        var month = ("0" + (now.getMonth() + 1)).slice(-2);
        var today = now.getFullYear() + "-" + (month) + "-" + (day);
            $('#fromDate').val(today);
            $('#toDate').val(today);
        }
        function OnChangedFromDate() {
            $('#fromDateValidate').hide();
        }

        function OnChangedToDate() {
            $('#toDateValidate').hide();
        }

        function BindForeignBodyFound() {
            var flagdate = 1;
            $('#tblForeignBodyFound').dataTable().fnDestroy();
            var t = $('#tblForeignBodyFound').dataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "pageLength": 10,
                "sAjaxSource": "/ForeignBodyFound/GetAllForeignBodyFoundList?flagdate=" + flagdate,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    flag = parseFloat(result.length);

                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "columns": [
                    {
                        "data": "Date",
                        "autoWidth": true,
                        "render": function (value) {
                            var dateString = value.substr(6);
                            var currentTime = new Date(parseInt(dateString));
                            var month = currentTime.getMonth() + 1;
                            var monthString = month > 9 ? month : '0' + month;
                            var day = currentTime.getDate();
                            var dayString = day > 9 ? day : '0' + day;
                            var year = currentTime.getFullYear();
                            var date = dayString + "/" + monthString + "/" + year;
                            return date;
                        }

                    },
                    { "data":"RawMaterial","autoWidth":true},
                    { "data": "OnGoingProcessing", "autoWidth": true },
                    { "data": "Batching", "autoWidth": true },
                    { "data": "PostProcessing", "autoWidth": true },
                    { "data": "CorrectiveAction", "autoWidth": true },
                    { "data": "VerifyByName", "autoWidth": true },
                   
                    {
                        data: "Id", "render": function (data) {
                            return '<button type="button" id="' + data + '" class = "btn text-primary btnEdit" title="Edit Foreign Body"><i class="fa fa-edit"/></i></button> <button type="button" id="'
                                + data + '" class = "btn text-danger btnDelete" title="Delete Foreign Body"><i class="fa fa-trash"/></i></button>'
                        }
                    }
                ]


            });
        }

        $("#btnGo").on("click", function () {
            var fromDate = $("#fromDate").val();
            var toDate = $("#toDate").val();
            var flagdate = 2;

            if (fromDate == null || fromDate == "") {
                $('#fromDateValidate').text('Select from date!');
                $('#fromDateValidate').show();
                $("#fromDate").focus();
                return;
            }

            if (toDate == null || toDate == "") {
                $('#toDateValidate').text('Select to date!');
                $('#toDateValidate').show();
                $("#toDate").focus();
                return;
            }

            if (fromDate > toDate) {
                alert('Invalid Date! To date is less than from date!');
                $('#fromDate').focus();
                return;
            }
            $('#ExportPdf').show();
            $('#ExportExcel').show();

            $('#tblForeignBodyFound').dataTable().fnDestroy();
            var t = $('#tblForeignBodyFound').dataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "pageLength": 10,
                "sAjaxSource": "/ForeignBodyFound/GetAllForeignBodyFoundList?flagdate=" + flagdate + "&fromDate=" + fromDate + "&toDate=" + toDate,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    var flag = parseFloat(result.length);
                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "columns": [
                    {
                        "data": "Date",
                        "autoWidth": true,
                        "render": function (value) {
                            var dateString = value.substr(6);
                            var currentTime = new Date(parseInt(dateString));
                            var month = currentTime.getMonth() + 1;
                            var monthString = month > 9 ? month : '0' + month;
                            var day = currentTime.getDate();
                            var dayString = day > 9 ? day : '0' + day;
                            var year = currentTime.getFullYear();
                            var date = dayString + "/" + monthString + "/" + year;
                            return date;
                        }

                    },
                    { "data": "RawMaterial", "autoWidth": true },
                    { "data": "OnGoingProcessing", "autoWidth": true },
                    { "data": "Batching", "autoWidth": true },
                    { "data": "PostProcessing", "autoWidth": true },
                    { "data": "CorrectiveAction", "autoWidth": true },
                    { "data": "VerifyByName", "autoWidth": true },
                    {
                        data: "Id", "render": function (data) {
                            return '<button type="button" id="' + data + '" class = "btn text-primary btnEdit" title="Edit Foreign Body"><i class="fa fa-edit"/></i></button> <button type="button" id="'
                                + data + '" class = "btn text-danger btnDelete" title="Delete Foreign Body"><i class="fa fa-trash"/></i></button>'
                        }
                    }
                ]
            });
        });

        $(document).on("click", ".btnEdit", function () {
                    var id = $(this).attr("id");
                    window.location.href = '@Url.Action("EditForeignBodyFound", "ForeignBodyFound", new { Id = "Id"})'.replace("Id", parseInt(id));
                });


       $(document).on("click", ".btnDelete", function () {
                    var id = $(this).attr("id");
                    if (confirm("Are you sure want to delete?")) {
                        window.location.href = '@Url.Action("Delete", "ForeignBodyFound", new { Id = "Id"})'.replace("Id", parseInt(id));
                    }
                })
    </script>
}