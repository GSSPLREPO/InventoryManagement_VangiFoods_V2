@model IEnumerable<InVanWebApp_BO.IndentBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Indent</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Indent</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Indent</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddIndent","Indent")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Indent
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblItem">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Indent Number")</th>
                                            <th>@Html.DisplayName("Indent Due Date")</th>
                                            <th>@Html.DisplayName("Status")</th>
                                            <th>@Html.DisplayName("Description")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody style="overflow-wrap: anywhere;">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IndentNo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IndentDueDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IndentStatus)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    @if (item.IndentCount == 0)
                                                    {
                                                        <a href=@Url.Action("EditIndent", "Indent", new { Item_ID = item.ID })>
                                                            <i class="fa fa-edit text-primary"></i>
                                                        </a> <span>&emsp;</span>
                                                        <a href=@Url.Action("DeleteIndent", "Indent", new { Item_ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                            <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href=@Url.Action("EditIndent", "Indent", new { Item_ID = item.ID, style="pointer-events: none;"})>
                                                            <i class="fa fa-edit text-primary"></i>
                                                        </a> <span>&emsp;</span>
                                                        <a href=@Url.Action("DeleteIndent", "Indent", new { Item_ID = item.ID , style="pointer-events: none;"}) onclick="return confirm('Are you sure want to delete?');">
                                                            <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                        </a>

                                                    }

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])
@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
