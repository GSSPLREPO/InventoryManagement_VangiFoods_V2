@model IEnumerable<InVanWebApp_BO.InquiryFormBO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<html>
<head>
    <title>Inquiry Form</title>
</head>
<body>
    
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Inquiry Form</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Inquiry Form</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddInquiryForm","InquiryForm")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Inquiry Form
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                @*<table class="table table-striped table-bordered table-responsive" id="tbl_PO">*@
                                <table class="table table-striped table-bordered" id="tbl_PO">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Inquiry Number")</th>
                                            <th>@Html.DisplayName("Date Of Inquiry")</th>
                                            <th>@Html.DisplayName("Inquiry Status")</th>
                                            <th>@Html.DisplayName("Company Name")</th>
                                            <th>@Html.DisplayName("Contact Person Name")</th>
                                            <th>@Html.DisplayName("Client Email")</th>
                                            <th>@Html.DisplayName("Contact Number")</th> 
                                            <th>@Html.DisplayName("Created By Date")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.InquiryNumber)</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateOfInquiry)
                                            </td>
                                            <td class="text-center">
                                                @if (item.InquiryStatus == "Close")
                                                {
                                                    <p style="color: #17d317;font-weight:bold" class="btn border rounded-pill border-1 border-success shadow-lg">
                                                        @Html.DisplayFor(modelItem => item.InquiryStatus, new { style = "color:green" })
                                                    </p>
                                                }
                                                else if (item.InquiryStatus == "Open")
                                                {
                                                    <p style="color: darkorange; font-weight: bold" class="btn border rounded-pill border-1 border-warning shadow-lg">
                                                        @Html.DisplayFor(modelItem => item.InquiryStatus, new { style = "color:#c900e1" })
                                                    </p>
                                                }
                                                else if (item.InquiryStatus == "Cancelled")
                                                {
                                                    <p style="color:red;font-weight:bold" class="btn border rounded-pill border-1 border-danger shadow-lg">
                                                        @Html.DisplayFor(modelItem => item.InquiryStatus, new { style = "color:red" })
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p style="color: #ffc800; font-weight: bold" class="btn border rounded-pill border-1 border-primary shadow-lg">
                                                        @Html.DisplayFor(modelItem => item.InquiryStatus, new { style = "color:#ffbc00" })
                                                    </p>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CompanyName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactPersonName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClientEmail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>

                                            <td>
                                                @if (item.InquiryStatus == "Open")
                                                {
                                                    <a href=@Url.Action("EditInquiryForm", new { InquiryID = item.InquiryID }) title="Edit Inquiry">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a>
                                                    <span>&nbsp;&nbsp;</span>
                                                    <a href=@Url.Action("DeleteInquiryForm", new { InquiryID = item.InquiryID }) onclick="return confirm('Are you sure want to delete the Inquiry Form?');" title="Delete Inquiry">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a><span>&nbsp;&nbsp;</span>
                                                }
                                                @if (item.InquiryStatus == "Cancelled")
                                                {
                                                    <a href=@Url.Action("DeleteInquiryForm", new { InquiryID = item.InquiryID }) onclick="return confirm('Are you sure want to delete the Inquiry Form?');" title="Delete Inquiry">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a><span>&nbsp;&nbsp;</span>
                                                }
                                                @if (item.InquiryStatus == "Close")
                                                {
                                                    <a href=@Url.Action("ViewInquiryForm", new { InquiryID = item.InquiryID }) title="View Inquiry">
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a><span>&nbsp;&nbsp;</span>
                                                }
                                            </td>

                                        </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])


@section scripts{

    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl_PO').dataTable().fnDestroy();
            $('#tbl_PO').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tbl_PO').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });

    </script>


}
