@model IEnumerable<InVanWebApp_BO.IntermediateRejectionNoteBO> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <title>Intermediate Rejection Note</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Intermediate Rejection Note</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Intermediate Rejection Note</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddIntermediateRejectionNote","IntermediateRejectionNote")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Intermediate Rejection Note
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblIssueNote">
                                    <thead>
                                        <tr>
                                            <th>@Html.Label("Intermediate Rejection Note Number")</th>
                                            <th>@Html.Label("Issued By")</th>                                            
                                            <th>@Html.Label("Location")</th>
                                            <th>@Html.Label("Intermediate Rejection Date")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Intermediate_Rej_NoteNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.IssueByName)</td>                                                
                                                <td>@Html.DisplayFor(modelItem => item.LocationName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Intermediate_Rej_NoteDate)</td>
                                                <td>
                                                    @*<a href=@Url.Action("ViewIssueNote", "IntermediateRejectionNote", new { ID = item.ID }) title="View Issue-Note">
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a>*@&emsp;
                                                    @*<a href=@Url.Action("DeleteIssueNote", "IntermediateRejectionNote", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Issue-Note">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>*@
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblIssueNote').dataTable().fnDestroy();
            $('#tblIssueNote').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tblIssueNote').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}
