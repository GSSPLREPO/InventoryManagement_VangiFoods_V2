@model InVanWebApp_BO.ItemBO
@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/MainMaster.cshtml";

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Item</h4>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.Label("Item Type")
                @Html.DropDownList("ItemTypeID", (IEnumerable<SelectListItem>)ViewData["ItemType"], "--Select Type--",
               new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemTypeID, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Item Category")
                @Html.DropDownList("ItemCategory_ID", (IEnumerable<SelectListItem>)ViewData["ItemCategory"], "--Select Category--",
               new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemCategory_ID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Item Name")
                @Html.TextBoxFor(model => model.Item_Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Item_Name, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Item_Code, new { @class = "control-label col-md-2" })*@
                @Html.Label("Item Code")
                @Html.TextBoxFor(model => model.Item_Code, new { @class = "form-control", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.Item_Code, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("HSN Code")
                @Html.TextBoxFor(model => model.HSN_Code, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HSN_Code, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Minimum Stock")
                @Html.TextBoxFor(model => model.MinStock, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MinStock, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Description")
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "error mt-2 text-danger" })
            </div>

            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            @Html.ActionLink("Back to List", "Index", new { @class = "font-weight-light" })

            @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>*@
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


