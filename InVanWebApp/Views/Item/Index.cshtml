@model IEnumerable<InVanWebApp.DAL.ItemMaster>
@{
    ViewBag.Title = "Item Master";
    Layout = "~/Views/Shared/MainMaster.cshtml";

}
<!DOCTYPE html>

<html>
<head>
    <title>Item Master</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Item Type</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i><a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Item Type</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItem")</h1>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.UnitName)*@
                                            @Html.DisplayName("Item Type")
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Description)*@
                                            @Html.DisplayName("Description")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ItemName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "EditItem", new { ItemID = item.ItemID }) |
                                                @Html.ActionLink("Delete", "DeleteItem", new { ItemID = item.ItemID })
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

