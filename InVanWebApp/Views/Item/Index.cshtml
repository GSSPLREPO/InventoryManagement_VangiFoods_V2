@model IEnumerable<InVanWebApp_BO.ItemBO>
@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Item</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Item</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Item</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddItems","Item")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Item
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Item Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Item Code")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Item Category")
                                        </th>
                                        <th>
                                            @Html.DisplayName("HSN Code")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Item Type")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Description")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Item_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Item_Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ItemCategoryName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HSN_Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ItemTypeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                <a href=@Url.Action("EditItem", "Item", new { Item_ID = item.ID })>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("DeleteItem", "Item", new { Item_ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                                @*@Html.ActionLink("Edit", "EditItem", new { Item_ID = item.ID }) |
                                                    @Html.ActionLink("Delete", "DeleteItem", new { Item_ID = item.ID, },
                                                        new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@

                                                @*@Html.ActionLink("Delete", "DeleteItem", new { Item_ID = item.ID })*@
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])

