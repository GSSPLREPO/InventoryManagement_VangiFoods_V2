@model InVanWebApp.DAL.ItemCategoryMaster
@{
    ViewBag.Title = "Add Item Category";
    Layout = "~/Views/Shared/MainMaster.cshtml";

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Item Category</h4>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.Label("Item Type")
                @Html.DropDownList("ItemTypeId", (IEnumerable<SelectListItem>)ViewData["ItemType"], "--Select Type--",
               new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemTypeId, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Item Category Name")
                @Html.TextBoxFor(model => model.ItemCategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemCategoryName, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Description")
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "error mt-2 text-danger" })
            </div>

            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            @Html.ActionLink("Back to List", "Index", new { @class = "font-weight-light" })

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}