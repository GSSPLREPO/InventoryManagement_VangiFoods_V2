@model InVanWebApp_BO.ItemTypeBO;
@{
    ViewBag.Title = "Edit Item Type";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Item Type</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.Label("Item Type")
                @Html.TextBoxFor(model => model.ItemType, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ItemType, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Description")
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "error mt-2 text-danger" })
            </div>

            <button type="submit" class="btn btn-primary mr-2">Update</button>
            @Html.ActionLink("Back to List", "Index", new { @class = "font-weight-light" })

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}