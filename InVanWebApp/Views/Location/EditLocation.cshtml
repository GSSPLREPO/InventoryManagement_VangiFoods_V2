@model InVanWebApp_BO.LocationMasterBO
@{
    ViewBag.Title = "Edit Location";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Location</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.Label("Location Name")
                @Html.TextBoxFor(model => model.LocationName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LocationName, "", new { @class = "error mt-2 text-danger" })
            </div>          

            <div class="form-group">
                @Html.Label("Remarks")
                @Html.TextBoxFor(model => model.Remark, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "error mt-2 text-danger" })
            </div>

            <button type="submit" class="btn btn-primary mr-2">Update</button>
            @Html.ActionLink("Back to List", "Index", new { @class = "font-weight-light" })

            @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>*@
        </div>
    </div>
}

