@model IEnumerable<InVanWebApp_BO.LocationMasterBO>
@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <title>Location</title>
</head>
<body>
    @*<div style="margin-top: -18px; margin-left: -20px; background: white;">
            <ul class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="@Url.Action("Index","Dashboard")">Master</a></li>
                <li class="active">/ Location</li>
            </ul>
        </div>*@

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Location</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Location</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">

                            <a href="@Url.Action("AddLocation","Location")" id="AddLocation" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Location
                            </a>

                            @*<h1 class="card-title">@Html.ActionLink("Add Location", "AddLocation")</h1>*@
                            @*<table class="table">*@
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblItem">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Location Name")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Address")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Actions")
                                            </th>
                                            <th style="display:none">Count</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-wrap">
                                                    @Html.DisplayFor(modelItem => item.LocationName)
                                                </td>
                                                <td class="text-wrap">
                                                    @Html.DisplayFor(modelItem => item.Address)
                                                </td>
                                                <td>
                                                    <a href=@Url.Action("EditLocation", "Location", new { LocationID = item.ID }) title="Edit Location">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("DeleteLocation", "Location", new { LocationID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Location">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                    @*@Html.ActionLink("Edit", "EditLocation", new { LocationID = item.ID }) |
                                                        @Html.ActionLink("Delete", "DeleteLocation", new { LocationID = item.ID, },
                                                           new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@
                                                </td>
                                                <td style="display:none;">
                                                    @Html.HiddenFor(modelItem => item.LocationCount)
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@Html.Raw(TempData["Success"])


@section Scripts {

    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $("#AddLocation").click(function (e) {
            var count = $('#item_LocationCount').val();
            if (count == '' || count == null)
                count = 0;

            count = parseFloat(count);

            if (count == 5) {
                alert('Cannot add more than 5 locations!');
                $('#AddLocation').prop('style', 'float: right; background: linear-gradient(85deg, #392c70, #6a005b); opacity:0.6;')
                e.preventDefault();
                return;
            }
        });
        $(document).ready(function () {
            $('#tblItem').dataTable().fnDestroy();
            $('#tblItem').dataTable({
                //"aLengthMenu": [[25, 50, 75, -1], [25, 50, 75, "All"]],
                "iDisplayLength": 10
            });
        });

        var table = $('#tblItem').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}

