    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Location</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Location</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Location", "AddLocation")</h1>*@
                            <a href="@Url.Action("AddLocation","Location")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Location
                            </a>
                            @*<table class="table">*@
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered" style="table-layout:fixed;">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Location Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Remarks")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LocationName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Remark)
                                            </td>
                                            <td>
                                                <a href=@Url.Action("EditLocation", "Location", new { LocationID = item.ID })>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("DeleteLocation", "Location", new { LocationID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                                @*@Html.ActionLink("Edit", "EditLocation", new { LocationID = item.ID }) |
                                                    @Html.ActionLink("Delete", "DeleteLocation", new { LocationID = item.ID, },
                                                       new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
