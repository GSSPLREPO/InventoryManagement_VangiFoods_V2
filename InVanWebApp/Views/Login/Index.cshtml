    <!-- endinject -->
    <link rel="shortcut icon" href="~/Theme/MainContent/images/favicon.png" />
</head>

@*<body>
    </body>*@

<body>



    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">

                <div class="row">
                    @*<div class="col-md-7 d-flex align-items-center justify-content-center">*@
                    <div class="justify-content-center">
                        <div class="">
                            @*<div class="shadow-lg p-4 pb-5 bg-white rounded boxShadow" style="padding-bottom:1rem !important; padding: 2rem!important">*@
                            <div class="shadow-lg p-4 pb-5 bg-white rounded boxShadow formcontent">
                                <div class="pb-2">
                                    @*<img src="../Theme/MainContent/images/Logo.svg" alt="Vangi Foods" class="d-none" />*@
                                    <img src="~/Theme/MainContent/images/logoForLogin.png" alt="Vangi Foods" style="height:20%;width:20%" />
                                </div>
                                @*rahul code 08/09/2022*@
                                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                            <form class="pt-3">
                                <div class="form-group">
                                    @*<h5>Username</h5>*@
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="fa fa-user text-primary"></i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control form-control-lg border-left-0", placeholder = "Username", type = "text" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "error mt-2 text-danger" })
                                </div>
                                <div class="form-group">
                                    @*<h5>Password</h5>*@
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="fa fa-lock text-primary"></i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-lg border-left-0", placeholder = "Password", type = "password" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error mt-2 text-danger" })
                                </div>
                                <div style="color:red;padding-right:0.1%;" id="txtBox">@ViewBag.Login</div>
                                <div class="my-3">
                                    <button id="btnLogin" type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" style="background: linear-gradient(85deg, #392c70, #6a005b); line-height: 0.5;">Login</button>
                                </div>
                                <div class=" justify-content-space-between mb-4">
                                    <span class="float-left mt-1" style="font-size:12px;">Version: 1.2.1</span>
                                    <a class="float-right brand-logo-mini mb-3" href="https://garimasystem.com/"><img src="~/Theme/MainContent/Logo/GSSPL Rounded png.png" width="20" alt="logo" /></a>
                                    <span class="float-right mt-1" style="font-size:12px;">Powered by:</span>

                                </div>
                            </form>
                                    @*<div class=" justify-content-space-between mb-5">
                                            <span class="float-left" style="font-size:12px;">Version: 1.1.0</span>
                                            <div class="float-right">
                                                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center" style="font-size:12px;">
                                                    <span>
                                                        Powered by
                                                    </span>
                                                    <span>
                                                        <a class="brand-logo-mini" href="https://garimasystem.com/"><img src="~/Theme/MainContent/Logo/GSSPL Rounded png.png" width="30" alt="logo" /></a>
                                                    </span>
                                                </span>
                                            </div>
                                        </div>*@
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        @*<img src="~/Theme/MainContent/images/auth/login-bg1.jpg" />*@
                    </div>

                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

</body>



