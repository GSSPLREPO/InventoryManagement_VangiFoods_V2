@model IEnumerable<InVanWebApp_BO.OrganisationsBO>
@{
    ViewBag.Title = "Organisation";
    Layout = "~/Views/Shared/MainMaster.cshtml";

}
<!DOCTYPE html>

<html>
<head>
    <title>Organisation Master</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Organisation</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Organisation</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItemType")</h1>*@
                            <a href="@Url.Action("AddOrganisation","Organisation")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Organisation
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Organisation Group")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Abbreviation")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Contact Person")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Contact No")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Description")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.OrganisationGroupName)
                                            </td>
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.Abbreviation)
                                            </td>
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.ContactPerson)
                                            </td>
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.ContactNo)
                                            </td>
                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.CityName)
                                                </td>*@
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td class="text-wrap">
                                                <a href=@Url.Action("EditOrganisation", "Organisation", new { OrganisationId = item.OrganisationId })>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("DeleteOrganisation", "Organisation", new { OrganisationId = item.OrganisationId }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                                @*@Html.ActionLink("Edit", "EditOrganisation", new { OrganisationId = item.OrganisationId }) |
                                                    @Html.ActionLink("Delete", "DeleteOrganisation", new { OrganisationId = item.OrganisationId, },
                                                         new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])