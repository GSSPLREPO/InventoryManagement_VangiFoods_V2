@model IEnumerable<InVanWebApp_BO.PestControlLogBO>

@{
    ViewBag.Title = "Pest Control Log";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Pest Control Log</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Pest Control Log</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Pest Control Log</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddPestControlLog", "PestControlLog")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Pest Control Log
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                <table class="table table-striped table-bordered hover table-sm" id="PestControlLogdt">
                                    <thead>
                                        <tr>
                                           
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Type Of Pest")</th>
                                            <th>@Html.DisplayName("Method For Pest Control")</th>
                                            <th>@Html.DisplayName("Area")</th>
                                            <th>@Html.DisplayName("Frequency")</th>
                                            @*<th>@Html.DisplayName("COA Received From Pest Control Company")</th>
                                            <th>@Html.DisplayName("Effective Or Not")</th>
                                            <th>@Html.DisplayName("Any Hazard Detected After Pest")</th>*@
                                            <th>@Html.DisplayName("Verify By")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        
                                            @foreach (var item in Model)
                                            {
                                        <tr>
                                           
                                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TypeOfPest)</td>
                                            <td>@Html.DisplayFor(modelItem => item.MethodForPestControl)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Area)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Frequncy)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.COARecivedFromPestControl)</td>
                                            <td>@Html.DisplayFor(modelItem => item.EffectiveOrNot)</td>
                                            <td>@Html.DisplayFor(modelItem => item.AnyHazardDetectedAfterPest)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.VerifyByName)</td>
                                            <td>
                                               
                                                <a href=@Url.Action("EditPestControlLog", "PestControlLog", new { Id = item.Id })>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("Delete", "PestControlLog", new { Id = item.Id }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                     
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

