@model IEnumerable<InVanWebApp_BO.PreStartupHygieneBO>
@{
    ViewBag.Title = "Pre Startup Hygine";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Pre Startup Hygine</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Pre Startup Hygiene</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","PreStartupHygiene")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Pre Startup Hygiene</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddPreStartupHygiene","PreStartupHygiene")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Pre Startup Hygiene
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                    <table class="table table-striped table-bordered" style="table-layout:fixed;">
                                        <tr>
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Roboqubos")</th>
                                            <th>@Html.DisplayName("VerifyBy")</th>
                                            <th>@Html.DisplayName("Edit/Delete")</th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Roboqubos)</td>
                                                <td>@Html.DisplayFor(modelItem => item.VerifyBy)</td>
                                                <td>
                                                    <a href=@Url.Action("EditCompany", "PreStartupHygiene", new { ID = item.Id })>
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("DeleteSupplierCustomer", "PreStartupHygiene", new { ID = item.Id }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>                                                    
                                                </td>
                                            </tr>
                                        }
                                    </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])