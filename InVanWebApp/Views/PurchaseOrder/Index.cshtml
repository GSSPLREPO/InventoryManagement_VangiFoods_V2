@model IEnumerable<InVanWebApp_BO.PurchaseOrderBO>

@{
    ViewBag.Title = "Purchase Order";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<html>
<head>
    <title>Purchase Order</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Purchase Order</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Purchase Order</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddPurchaseOrder","PurchaseOrder")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Purchase Order
                            </a>    @*Rahul updated 07/12/2022.*@   
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered" id="tbl_PO">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Title")</th>
                                            <th>@Html.DisplayName("PO Number")</th>
                                            <th>@Html.DisplayName("Purchase Order Status")</th>
                                            <th>@Html.DisplayName("Last Modified Date")</th>
                                            <th>@Html.DisplayName("Supplier Name")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Tittle)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PONumber)</td>
                                                <td>
                                                    @*@Html.DisplayFor(modelItem => item.PurchaseOrderStatus)*@
                                                    @if (item.PurchaseOrderStatus == "Closed")
                                                    {
                                                        <p style="color: #17d317;font-weight:bold">

                                                            @Html.DisplayFor(modelItem => item.PurchaseOrderStatus, new { style = "color:green" })
                                                        </p>
                                                    }
                                                    else if (item.PurchaseOrderStatus == "Open")
                                                    {
                                                        <p style="color: darkorange; font-weight: bold">

                                                            @Html.DisplayFor(modelItem => item.PurchaseOrderStatus, new { style = "color:#c900e1" })
                                                        </p>
                                                    }
                                                    else if (item.PurchaseOrderStatus == "Cancelled")
                                                    {
                                                        <p style="color:red;font-weight:bold">

                                                            @Html.DisplayFor(modelItem => item.PurchaseOrderStatus, new { style = "color:red" })
                                                        </p>
                                                    }
                                                    else
                                                    {
                                                        <p style="color: yellow; font-weight: bold">

                                                            @Html.DisplayFor(modelItem => item.PurchaseOrderStatus, new { style = "color:#ffbc00" })
                                                        </p>
                                                    }
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LastModifiedDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SupplierAddress)
                                                </td>
                                                <td>

                                                    @if (item.DraftFlag == true)
                                                    {
                                                        <a href=@Url.Action("EditPurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId }) title="Edit PO">
                                                            <i class="fa fa-edit text-primary"></i>
                                                        </a>
                                                        <span>&nbsp;&nbsp;</span>
                                                        <a href=@Url.Action("DeletePurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId, }) onclick="return confirm('Are you sure want to delete the PO?');" title="Delete PO">
                                                            @*<i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>*@
                                                            <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                        </a><span>&nbsp;&nbsp;</span>
                                                    }
                                                    @if (item.InwardCount <= 0 & item.DraftFlag == false)
                                                    {
                                                        if (item.Amendment != 2)
                                                        {
                                                            <a href=@Url.Action("POAmendment", new { PurchaseOrderId = item.PurchaseOrderId }) title="Amend PO">
                                                                <i class="fa fa-file-alt text-primary"></i>
                                                            </a><span>&nbsp;&nbsp;</span>
                                                        }
                                                        <a href=@Url.Action("DeletePurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId, }) onclick="return confirm('Are you sure want to delete the PO?');" title="Delete PO">
                                                            <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                        </a><span>&nbsp;&nbsp;</span>
                                                    }
                                                    @if (item.DraftFlag == false)
                                                    {
                                                        <a href=@Url.Action("ViewPurchaseOrder", new { ID = item.PurchaseOrderId }) title="View PO">
                                                            <i class="fa fa-eye text-primary"></i>
                                                        </a><span>&nbsp;&nbsp;</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])


@section scripts{

    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl_PO').dataTable().fnDestroy();
            $('#tbl_PO').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tbl_PO').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}

