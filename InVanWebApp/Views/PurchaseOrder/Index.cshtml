@model IEnumerable<InVanWebApp_BO.PurchaseOrderBO>

@{
    ViewBag.Title = "Purchase Order";
    //ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}




<html>
<head>
    <title>Purchase Order</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Purchase Order</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Purchase Order</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddPurchaseOrder","PurchaseOrder")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Purchase Order
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Title")
                                        </th>
                                        <th>
                                            @Html.DisplayName("PO Number")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Purchase Order Status")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Last Modified Date")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Supplier Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Amendment")
                                        </th>
                                        <th>
                                            @Html.DisplayName("View/Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tittle)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PONumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PurchaseOrderStatus)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastModifiedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierAddress)
                                            </td>
                                            <td>
                                                @if (item.InwardCount <= 0 & item.DraftFlag == false)
                                                {
                                                    <a href="@Url.Action("POAmendment", new { PurchaseOrderId = item.PurchaseOrderId })" title="Amendment Purchase Order">
                                                        <i class="fa fa-file-alt text-primary"></i>
                                                    </a>
                                                }
                                            </td>
                                            <td>

                                                @if (item.DraftFlag == true)
                                                {
                                                    <a href=@Url.Action("EditPurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId }) title="Edit Purchase Order">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a><span>&nbsp;&nbsp;</span>
                                                }
                                                @if (item.DraftFlag == false)
                                                {
                                                    <a href=@Url.Action("ViewPurchaseOrder", new { ID = item.PurchaseOrderId })>
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a><span>&nbsp;&nbsp;</span>
                                                }
                                                <a href=@Url.Action("DeletePurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId, }) onclick="return confirm('Are you sure want to delete?');" title="Remove Purchse Order">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])


