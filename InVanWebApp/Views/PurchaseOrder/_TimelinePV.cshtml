@model InVanWebApp_BO.PurchaseOrderBO


@*<h1>PO Details</h1>
    <h2>POId: @Model.PurchaseOrderId</h2>
    <h2>PONumber: @Model.PONumber</h2>*@

<div class="container-fluid py-5">

    <div class="row">
        <div class="col-lg-12">

            <div class="horizontal-timeline">

                <ul class="list-inline items">
                    <li class="list-inline-item items-list">
                        <div class="px-4">
                            <!-- Rahul added  py-2 30-12-2022. -->
                            <div class="event-date badge bg-info font-weight-bold py-2" style="color:white">
                                @Model.PODate.ToString("dd/MM/yyyy")
                                @*@Html.DisplayFor(model => model.PODate, "{0:yyyy-MM-dd}")*@
                            </div>
                            <h5 class="pt-2">PO</h5>
                            <p class="text-muted font-weight-bold">
                                @Model.PONumber
                            </p>
                            <div>
                                @*<a href="#" class="btn btn-primary btn-sm">Read more</a>*@
                            </div>
                        </div>
                    </li>
                    <li class="list-inline-item items-list">
                        <div class="px-4">
                            <!-- Rahul added  py-2 30-12-2022. -->
                            <div class="event-date badge bg-success font-weight-bold py-2" style="color:white">
                                @*@Model.InwardDate.ToString("dd/MM/yyyy")*@

                                @{ if ((DateTime.Compare(Model.InwardDate, Convert.ToDateTime("01-01-0001 00:00:00")) == 0))
                                    {
                                        <!-- Rahul updated  mb-2 to mb-0 30-12-2022. -->
                                        <div class="mb-0 text-white font-weight-bold">Not yet done</div>
                                    }
                                    else
                                    {
                                        @Model.InwardDate.ToString("dd/MM/yyyy")
                                    } }

                            </div>
                            <h5 class="pt-2">Inward</h5>
                            <p class="text-muted font-weight-bold">
                                @*@Model.InwardNumber*@
                                @{ if (Model.InwardNumber != null)
                                    {
                                        @Model.InwardNumber
                                    }
                                    else
                                    {
                                        <!-- <div class="mb-2 text-muted font-weight-bold">Inward is pending!</div> -->
                                        <div class="mb-2 text-muted font-weight-bold">Pending</div>
                                    } }
                            </p>
                            <div>
                                @*<a href="#" class="btn btn-primary btn-sm">Read more</a>*@
                            </div>
                        </div>
                    </li>
                    <li class="list-inline-item items-list">
                        <div class="px-4">
                            <!-- Rahul added  py-2 30-12-2022. -->
                            <div class="event-date badge bg-danger font-weight-bold py-2" style="color:white">
                                @{ if ((DateTime.Compare(Model.GRNDate, Convert.ToDateTime("01-01-0001 00:00:00")) == 0))
                                    {
                                        <!-- Rahul updated  mb-2 to mb-0 30-12-2022. -->
                                        <div class="mb-0 text-white font-weight-bold">Not yet done</div>
                                    }
                                    else
                                    {
                                        @Model.GRNDate.ToString("dd/MM/yyyy")
                                    } }
                            </div>
                            <h5 class="pt-2">GRN</h5>
                            <p class="text-muted font-weight-bold">
                                @{ if (Model.GRNCode != null)
                                    {
                                        @Model.GRNCode
                                    }
                                    else
                                    {
                                        <!-- <div class="mb-2 text-muted font-weight-bold">GRN is pending!</div> -->
                                        <div class="mb-2 text-muted font-weight-bold">Pending</div>
                                    } }
                            </p>
                            <div>
                                @*<a href="#" class="btn btn-primary btn-sm">Read more</a>*@
                            </div>
                        </div>
                    </li>
                    <li class="list-inline-item items-list">
                        <div class="px-4">
                            <!-- Rahul added  py-2 30-12-2022. -->
                            <div class="event-date badge bg-warning font-weight-bold text-white py-2">
                                @*@Model.PaymentDate.ToString("dd/MM/yyyy")*@
                                @{ if ((DateTime.Compare(Model.PaymentDate, Convert.ToDateTime("01-01-0001 00:00:00")) == 0))
                                    {
                                        <!-- Rahul updated  mb-2 to mb-0 30-12-2022. -->
                                        <div class="mb-0 text-white font-weight-bold">Not yet done</div>
                                    }
                                    else
                                    {
                                        @Model.PaymentDate.ToString("dd/MM/yyyy")
                                    } }
                            </div>
                            <h5 class="pt-2">PO Payment</h5>
                            <p class="text-muted font-weight-bold">
                                @*@Model.InvoiceNumber*@
                                @{ if (Model.InvoiceNumber != null)
                                    {
                                        @Model.InvoiceNumber
                                    }
                                    else
                                    {
                                        <!-- <div class="mb-2 text-muted font-weight-bold">PO payment is pending!</div> -->
                                        <div class="mb-2 text-muted font-weight-bold">Pending</div>
                                    } }
                            </p>
                            <div>
                                @*<a href="#" class="btn btn-primary btn-sm">Read more</a>*@
                            </div>
                        </div>
                    </li>
                </ul>

            </div>

        </div>
    </div>

</div>