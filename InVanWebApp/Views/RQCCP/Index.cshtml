@model IEnumerable<InVanWebApp_BO.RQCCPBO>
@{
    ViewBag.Title = "RQCCP";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <title>Stage-1 RQ CCP</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stage-1 RQ CCP</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        @*Rahul updated anchor tag text 'Master' to 'Transactions' 16-02-23.*@
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Productions</a>
                    </li>
                    <li class="breadcrumb-item active">Stage-1 RQ CCP</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddRQCCP","RQCCP")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> RQ CCP
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblRQCCP">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Product Name")</th>
                                            <th>@Html.DisplayName("Raw Batches No")</th>
                                            <th>@Html.DisplayName("Weight of Raw Batches (KG)")</th>
                                            <th>@Html.DisplayName("Tansfer Time into Holding Silo")</th>
                                            <th>@Html.DisplayName("Weight (KG)")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.RawBatchesNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.WeightofRawBatches)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TansferTimeintoHoldingSilo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                                                <td>
                                                    <a href=@Url.Action("EditRQCCP", "RQCCP", new { Id = item.Id }) title="Edit RQ CCP">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("DeleteRQCCP", "RQCCP", new { Id = item.Id }) onclick="return confirm('Are you sure want to delete?');" title="Delete RQ CCP">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])
