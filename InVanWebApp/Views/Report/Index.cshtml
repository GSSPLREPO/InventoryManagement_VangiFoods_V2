
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>PO Report</title>
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">PO Report</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">PO Report</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div style="padding-top:15px;">

                                @using (Html.BeginForm("ExprotAsPDF", "Report", FormMethod.Post))
                                {

                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>From Date:</label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBox("fromDate", "{0:yyyy-MM-dd}", new { @id = "fromDate", @class = "datepicker form-control form-control-sm", @type = "date" })
                                            @Html.ValidationMessage("fromDate", "", new { @class = "col-form-label error mt-2 text-danger" })
                                        </div>
                                        &nbsp;
                                        <div class="col-md-2">
                                            <label>To Date:</label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBox("toDate", "{0:yyyy-MM-dd}",  new { @id = "toDate", @class = " datepicker form-control form-control-sm", @type = "date" })
                                            @Html.ValidationMessage("toDate", "", new { @class = "col-form-label error mt-2 text-danger" })
                                        </div>
                                        &nbsp;

                                        <button id="btnGo" type="button" value="Go" name="Go" class="btn btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);">Go</button>
                                        &nbsp;
                                        <a id="ExportPdf" href="@Url.Action("ExprotAsPDF", "Report")"> <img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                        &nbsp;
                                        <a id="ExportExcel" href="@Url.Action("ExportAsExcel", "Report")"> <img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                    </div>
                                    
                                    <div class="row" style="padding-top: 0.5%;">
                                        <div class="col-md-2">
                                            <label>Status:</label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.DropDownList("Status", new List<SelectListItem> {
                                                new SelectListItem { Text = "Open", Value = "Open" },
                                                new SelectListItem { Text = "Closed", Value = "Closed" },
                                                new SelectListItem { Text = "In Progress", Value = "In Progress" }}, new { @class = "form-control", @id = "Status" })

                                        </div>
                                        &nbsp;
                                        <div class="col-md-2">
                                            <label>Vendors:</label>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.DropDownList("Vendors", (IEnumerable<SelectListItem>)ViewData["Vendors"], "--Select--", new { @class = "form-control", @id = "Vendors" })
                                            @Html.ValidationMessage("Vendors", "", new { @class = "col-form-label error mt-2 text-danger" })
                                        </div>
                                        &nbsp;
                                    </div>
                                    <br />

                                }
                                <div style="margin-top:25px;">
                                    <table class="ui celled table table-striped table-bordered hover table-sm" id="tblInward">
                                        <thead>
                                            <tr>
                                            <tr>
                                                <th style="text-align:center">Sr.No.</th>
                                                <th style="text-align:center">PO Date</th>
                                                <th style="text-align:center">PO Number</th>
                                                <th style="text-align:center">Indent Number</th>
                                                <th style="text-align:center">PO Status</th>
                                                <th style="text-align:center">Vendor Name</th>
                                        </thead>
                                        <tbody class="text-center"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">

        $(document).ready(function () {
            $('#ExportPdf').hide();
            $('#ExportExcel').hide();
            $('#tblInward').hide();
        });

        $("#btnGo").on('click', function () {
            $('#ExportPdf').show();
            $('#ExportExcel').show();
            $('#tblInward').show();

            //$("#fromDate").disabled=true;
            //$("#toDate").disabled=true;

            var fromDate = $("#fromDate").val();
            var toDate = $("#toDate").val();
            var Status = $('#Status').val();
            var Vendor = $('#Vendors').val();



            $('#tblInward').dataTable().fnDestroy();
            var t = $('#tblInward').DataTable({
                //"processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "sAjaxSource": "/Report/GetPOReportData?fromDate=" + fromDate + "&toDate=" + toDate + "&status=" + Status + "&vendor=" + Vendor,

                "pageLength": 20,
                "scrollX": true,
                "columns": [
                    { "data": "SrNo", "autoWidth": true },
                    { "data": "PurchaseOrderDate", "autoWidth": true },
                    { "data": "PONumber", "autoWidth": true },
                    { "data": "IndentNumber", "autoWidth": true },
                    { "data": "PurchaseOrderStatus", "autoWidth": true },
                    { "data": "CompanyName", "autoWidth": true }
                ]
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();

        });

                  
    </script>
}
