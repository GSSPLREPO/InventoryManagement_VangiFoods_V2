@model IEnumerable<InVanWebApp_BO.RoleBO>
@{
    ViewBag.Title = "Role Master";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Role Master</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Role Master</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Role</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Role", "AddRole")</h1>*@
                            <a href="@Url.Action("AddRole","Role")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Role
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.UnitName)*@
                                            @Html.DisplayName("Role")
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Description)*@
                                            @Html.DisplayName("Description")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @*@Html.ActionLink("Edit", "EditRole", new { RoleId = item.RoleId }) |*@
                                                <a href="@Url.Action("EditRole","Role")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                                    <span class="fa fa-edit"></span>
                                                </a>
                                                <a href="@Url.Action("DeleteRole","Role")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                                    <span class="fa fa-edit"></span>
                                                </a>
                                                @Html.ActionLink("Delete", "DeleteRole", new { RoleId = item.RoleId, },
                                                    new { onclick = "return confirm('Are you sure, you wants to delete?');" })

                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])