@model IEnumerable<InVanWebApp_BO.SILOCCPBO>

@{
    ViewBag.Title = "SILOCCP";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<!DOCTYPE html>

<html>
<head>
    <title>Stage-2 SILO CCP</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stage-2 SILO CCP</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Productions</a>
                    </li>
                    <li class="breadcrumb-item active">Stage-2 SILO CCP</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddSILOCCP", "SILOCCP")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> SILO CCP
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                <table class="table table-striped table-bordered hover table-sm" id="SILOCCPdt">
                                    <thead>
                                        <tr>
                                            @*<th>@Html.DisplayName("ID")</th>*@
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Time")</th>
                                            <th>@Html.DisplayName("Item Name")</th>
                                            <th>@Html.DisplayName("Activity")</th>
                                            @*<th>@Html.DisplayName("Monitoring Parameter")</th>*@
                                            <th>@Html.DisplayName("Transefered Time From RQS")</th>
                                            @*<th>@Html.DisplayName("Mandatory Range")</th>*@
                                            <th>@Html.DisplayName("Frequency")</th>
                                            <th>@Html.DisplayName("Weight Of Holding Material(Kg)")</th>
                                            <th>@Html.DisplayName("Corrective Actions")</th>
                                            @*<th>@Html.DisplayName("Responsibility")</th>*@
                                            <th>@Html.DisplayName("Verification")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @*@{int SrNo = 1;}*@
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @*<td>ID</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Time)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Activity)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.MonitoringParameter)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.TranseferedTimeFromRQS)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.MandatoryRange)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.Frequency)</td>
                                                <td>@Html.DisplayFor(modelItem => item.WeightOfHoldingMaterial)</td>
                                                <td>@Html.DisplayFor(modelItem => item.CorrectiveActions)</td>

                                                <td>@Html.DisplayFor(modelItem => item.Verification)</td>
                                                <td>

                                                    <a href=@Url.Action("EditSILOCCP", "SILOCCP", new { Id = item.ID }) title="Edit SILO CCP">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("Delete", "SILOCCP", new { Id = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete SILO CCP">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            //SrNo++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

