@model IEnumerable<InVanWebApp_BO.SanitizationAndHygineBO>

@{
    ViewBag.Title = "Sanitization And Hygine";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Sanitization And Hygine</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="SanitizationAndHygine">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Sanitization And Hygine</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Sanitization And Hygine</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddSanitizationAndHygine","SanitizationAndHygine")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Sanitization And Hygine
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                @*<table class="table table-striped table-bordered hover table-sm" id="SanitizationAndHyginedt">*@
                                <table id="SanitizationAndHyginedt" class="table table-striped table-bordered hover table-sm table-responsive-md" style="table-layout: fixed;">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Name of Empolyee")</th>
                                            <th>@Html.DisplayName("Department")</th>
                                            <th>@Html.DisplayName("Body Temprature")</th>
                                            <th>@Html.DisplayName("Hand Wash")</th>
                                            @*<th>@Html.DisplayName("Clean Nails")</th>*@
                                            @*<th>@Html.DisplayName("Clean Uniform")</th>*@
                                            <th>@Html.DisplayName("Any Cuts & Wounds")</th>
                                            @*<th>@Html.DisplayName("Wear Any Jwellery")</th>*@
                                            <th>@Html.DisplayName("Fully Coverd Hair")</th>
                                            @*<th>@Html.DisplayName("Clean Shoes")</th>*@
                                            @*<th>@Html.DisplayName("No Tobaco, Chewingum")</th>
                                                <th>@Html.DisplayName("Any Kind Of Illness/Seakness")</th>*@
                                            <th>@Html.DisplayName("Verify By Name")</th>
                                            @*<th>@Html.DisplayName("Remark")</th>*@
                                            <th>@Html.DisplayName("Edit/Delete")</th>
                                        </tr>

                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @*<td>@Html.DisplayFor(modelItem => item.Date)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.NameOfEmpolyee)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                                <td>@Html.DisplayFor(modelItem => item.BodyTemperature)</td>
                                                <td>@Html.DisplayFor(modelItem => item.HandWash)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.CleanNails)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.CleanUniform)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.AppearAnyCutsandWounds)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.WearAnyJwellery)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.FullyCoverdHair)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.CleanShoes)</td>*@
                                                @*<td>@Html.DisplayFor(modelItem => item.NoTobacoChewingum)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.AnyKindOfIllnessSeakness)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.VerifyByName)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.Remark)</td>*@
                                                <td>
                                                    <a href=@Url.Action("EditSanitizationAndHygine", "SanitizationAndHygine", new { Id = item.Id })>
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("Delete", "SanitizationAndHygine", new { Id = item.Id }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

