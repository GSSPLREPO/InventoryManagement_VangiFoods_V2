@model IEnumerable<InVanWebApp_BO.Stage3BO>

@{
    ViewBag.Title = "Stage3";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <title>Stage-3</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="HotFillingPackingLineLogSheetCCP">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stage-3</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Production</a>
                    </li>
                    <li class="breadcrumb-item active">Stage-3</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddStage3","Stage3")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Stage-3
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                <table class="table table-striped table-bordered hover table-sm" id="HotFillingPackingLineLogSheetCCPdt">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Product Name")</th>
                                            <th>@Html.DisplayName("Lot No")</th>    @*//Rahul added 'LotNumber' 05-06-2023.*@
                                            <th>@Html.DisplayName("Raw Batches No")</th>
                                            <th>@Html.DisplayName("Packing Hopper Temp(°C)")</th>
                                            <th>@Html.DisplayName("Chiller Temp(°C)")</th>
                                            <th>@Html.DisplayName("Consistancy in CM")</th>
                                            <th>@Html.DisplayName("Packing Size")</th>
                                            <th>@Html.DisplayName("No Of Packets")</th>
                                            <th>@Html.DisplayName("Packing Unit")</th>
                                            <th>@Html.DisplayName("Final Weight")</th>
                                            <th>@Html.DisplayName("Final Packets")</th>
                                            <th>@Html.DisplayName("Rejected Packets")</th>
                                            @*<th>@Html.DisplayName("Remarks")</th>*@
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>

                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            @*<td>@Html.DisplayFor(modelItem => item.Date)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.LotNumber)</td> @*//Rahul added 'LotNumber' 05-06-2023.*@
                                            <td>@Html.DisplayFor(modelItem => item.RawBatchesNo)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PackingHopperTemp)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ChillerTemp)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Consistency)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PackingSize)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NoOfPackets)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PackingUnit)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FinalWeight)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FinalPackets)</td>
                                            <td>@Html.DisplayFor(modelItem => item.RejectedPackets)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.Remarks)</td>*@
                                            <td>
                                                <a href=@Url.Action("EditStage3", "Stage3", new { ID = item.ID }) title="Edit Stage-3">
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("Delete", "Stage3", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Stage-3">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    @*<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/plug-ins/1.10.11/sorting/date-eu.js"></script>*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@


    <script type="text/javascript">
        $(document).ready(function () {
            $('#HotFillingPackingLineLogSheetCCPdt').dataTable().fnDestroy();
            $('#HotFillingPackingLineLogSheetCCPdt').dataTable({
                "iDisplayLength": 10,
                //"columnDefs": [{ "targets": 3, "type": "date-eu" }],
                "order": [[3, 'desc']],
            });
        });

        var table = $('#HotFillingPackingLineLogSheetCCPdt').dataTable({
            "serverSide": false,
            "filter": true,
            //"columnDefs": [{ "targets": 3, "type": "date-eu" }],
            "order": [[3, 'desc']],
            "pageLength": 20
        });</script>
}