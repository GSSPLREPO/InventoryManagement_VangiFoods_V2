@model InVanWebApp_BO.StockMovementBO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Stock Movement Report</title>
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stock Movement Report</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Reports</a>
                    </li>
                    <li class="breadcrumb-item active">Stock Movement Report</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div style="padding-top:15px;">

                                @using (Html.BeginForm("ExprotAsPDF", "StockMovement", FormMethod.Post))
                                {

                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>From Date:</label>
                                            <span style="color:red">*</span>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(model => model.fromDate, "{0:yyyy-MM-dd}", new { @id = "fromDate", @class = "datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedFromDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                            @Html.ValidationMessageFor(model => model.fromDate, "", new { id = "fromDateValidate", @class = "col-form-label error mt-2 text-danger" })
                                        </div>
                                        <div class="col-md-2">
                                            <label>To Date:</label>
                                            <span style="color:red">*</span>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(model => model.toDate, "{0:yyyy-MM-dd}", new { @id = "toDate", @class = " datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedToDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                            @Html.ValidationMessageFor(model => model.toDate, "", new { id = "toDateValidate", @class = "col-form-label error mt-2 text-danger" })
                                        </div>
                                        <div class="col-md-2">
                                        <button id="btnGo" type="button" value="Go" name="Go" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);">Go</button>
                                        <a id="ExportPdf" href="@Url.Action("ExprotAsPDF", "StockMovement")"> <img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                        <a id="ExportExcel" href="@Url.Action("ExportAsExcel", "StockMovement")"> <img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                        </div>
                                        
                                    </div>
                                    <br />

                                }
                                <div class="table-responsive" style="margin-top:25px;">
                                    <table class="table table-striped table-bordered" id="tblInward" style="table-layout:fixed">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center">Sr.No.</th>
                                                <th style="text-align:center">Item Code</th>
                                                <th style="text-align:center">Item Name</th>
                                                <th style="text-align:center">Inward Date of Item</th>
                                                <th style="text-align:center">Price Per Unit (Rs)</th>
                                                <th style="text-align:center">Date</th>
                                                <th style="text-align:center">From Location</th>
                                                <th style="text-align:center">From Location Before Transfer Quantity (KG)</th>
                                                <th style="text-align:center">Transfer Quantity (KG)</th>
                                                <th style="text-align:center">Value Out (Rs)</th>
                                                <th style="text-align:center">Balance Quantity From Location (KG)</th>
                                                <th style="text-align:center">Action</th>
                                                <th style="text-align:center">To Location</th>
                                                <th style="text-align:center">ToLocation Final Quantity (KG)</th>
                                                <th style="text-align:center">Value In (Rs)</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-center"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">

        $(document).ready(function () {
            $('#ExportPdf').hide();
            $('#ExportExcel').hide();
            $('#tblInward').hide();
        });
        ///Rahul added id = fromDateValidate 09-01-2023.
        function OnChangedFromDate() {
            $('#fromDateValidate').hide();
        }
        function OnChangedToDate() {
            $('#toDateValidate').hide();
        }

        $("#btnGo").on('click', function () {

            var fromDate = $("#fromDate").val();
            var toDate = $("#toDate").val();

            if (fromDate == null || fromDate == "") {
                $('#fromDateValidate').text('Select from date!');
                $('#fromDateValidate').show();
                $('#fromDate').focus();
                return;
            }

            if (toDate == null || toDate == "") {
                $('#toDateValidate').text('Select to date!');
                $('#toDateValidate').show();
                $('#toDate').focus();
                return;
            }

            if (fromDate > toDate) {
                alert('Invalid date selection!');
                $('#fromDate').focus();
                return;
            }

            ///Rahul added id = VendorValidate 06-01-2023.
            //===========OnChange of item if From date is not selected================
            var fromDateCheck = $('#fromDate').val();
            var toDateCheck = $('#toDate').val();
            if (fromDateCheck == '' || fromDateCheck == null) {
                $('#fromDateValidate').text("Select from date!");
                $('#fromDateValidate').show();
                $('#fromDate').focus();
                return;
            }
            else if (toDateCheck == '' || toDateCheck == null) {
                $('#toDateValidate').text("Select to date!");
                $('#toDateValidate').show();
                $('#toDate').focus();
                return;
            }

            //==================end======================

            $('#ExportPdf').show();
            $('#ExportExcel').show();
            $('#tblInward').show();

            $('#tblInward').dataTable().fnDestroy();
            var t = $('#tblInward').DataTable({
                //"processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "sAjaxSource": "/StockMovement/GetStockMovementDate?fromDate=" + fromDate + "&toDate=" + toDate,
                ///Rahul added initComplete function for export buttons hide/show 09-01-2023.
                "initComplete": function (settings, json) {
                    //var flag = (document.getElementById("tblInward").rows.length);
                    //flag = parseFloat(flag);
                    var result = JSON.stringify(json);
                    flag = parseFloat(result.length);

                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "pageLength": 20,
                "scrollX": true,
                "columns": [
                    { "data": "SrNo", "autoWidth": true },
                    { "data": "Item_Code", "autoWidth": true },
                    { "data": "Item_Name", "autoWidth": true },
                    { "data": "InwardDateOfItem", "autoWidth": true },
                    { "data": "UnitPrice", "autoWidth": true },
                    { "data": "Date", "autoWidth": true },
                    { "data": "FromLocationName", "autoWidth": true },
                    { "data": "FromLocation_BeforeTransferQty", "autoWidth": true },
                    { "data": "TransferQuantity", "autoWidth": true },
                    { "data": "ValueOut", "autoWidth": true },
                    { "data": "BalanceQty_FromLocation", "autoWidth": true },
                    { "data": "Action", "autoWidth": true },
                    { "data": "ToLocationName", "autoWidth": true },
                    { "data": "ToLocation_FinalQty", "autoWidth": true },
                    { "data": "ValueIn", "autoWidth": true }
                ]
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();

        });

    </script>
}