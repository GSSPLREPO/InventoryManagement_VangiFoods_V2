@model IEnumerable<InVanWebApp_BO.StockMovementBO> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Stock Movement Report</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stock Movement Report</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Stock Movement Report</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive" style="padding-top:15px;">
                                <a style="font-size: 50px;" href="@Url.Action("ExprotAsPDF", "StockMovement")" class="far fa-file-pdf float-right text-danger">

                                </a>
                                <table class="table table-striped table-bordered hover table-sm" id="tblInward">
                                    <thead>
                                        <tr>
                                        <tr>
                                            <th style="text-align:center">Sr.No.</th>
                                            <th style="text-align:center">Item Code</th>
                                            <th style="text-align:center">Item Name</th>
                                            <th style="text-align:center">Date</th>
                                            <th style="text-align:center">From Location</th>
                                            <th style="text-align:center">From Location Before Transfer Qty</th>
                                            <th style="text-align:center">Transfer Quantity</th>
                                            <th style="text-align:center">Value Out</th>
                                            <th style="text-align:center">Balance Qty From Location</th>
                                            <th style="text-align:center">Action</th>
                                            <th style="text-align:center">To Location</th>
                                            <th style="text-align:center">ToLocation FinalQty</th>
                                            <th style="text-align:center">Value In</th>
                                            <th style="text-align:center">Price Per Unit(rs)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model) 
                                        {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.SrNo)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Item_Code)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Item_Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FromLocationName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FromLocation_BeforeTransferQty)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TransferQuantity)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ValueOut)</td>
                                            <td>@Html.DisplayFor(modelItem => item.BalanceQty_FromLocation)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Action)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ToLocationName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ToLocation_FinalQty)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ValueIn)</td>
                                            <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>

                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    <script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
    <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />


    <script type="text/javascript">
        var table = $('#tblInward').dataTable({
            "searching": true,
            "bLengthChange": false,
            "bPaginate": true
            //"pageLength": 15
        });
    </script>
}

