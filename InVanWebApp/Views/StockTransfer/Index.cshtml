
@model IEnumerable<InVanWebApp_BO.StockTransferBO>
@{
    ViewBag.Title = "Stock Transfer";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<html>
<head>
    <title>Stock Transfer</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stock Transfer</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Inventory</a>
                    </li>
                    <li class="breadcrumb-item active">Stock Transfer</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">                            
                            <a href="@Url.Action("AddStockTransfer","StockTransfer")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Stock Transfer
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table id="example" class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Item Code")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Item Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("From Location")
                                        </th>
                                        <th>
                                            @Html.DisplayName("To Location")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Transfer Quantity")
                                        </th>
                                        @*<th>
                                            @Html.DisplayName("Required Quantity")
                                        </th>*@
                                        <th>
                                            @Html.DisplayName("Final Quantity")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Remarks")
                                        </th>
                                        <!--<th>-->
                                        @*@Html.DisplayName("Edit/Delete")*@
                                        <!--</th>-->
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Item_Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Item_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FromLocationName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ToLocationName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TransferQuantity)
                                            </td>
                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.RequiredQuantity)
                                            </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FinalQuantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Remarks)
                                            </td>
                                            <!--<td>-->
                                            @*@Html.ActionLink("Edit", "EditPurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId }, new { @class = "fa fa-eye text-primary" }) |*@
                                            @*@Html.ActionLink("Edit", "EditPurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId }) |
                        @Html.ActionLink("Delete", "DeletePurchaseOrder", new { PurchaseOrderId = item.PurchaseOrderId, },
                            new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@

                                            @*@Html.ActionLink("Delete", "DeleteItem", new { PurchaseOrder_Id = item.PurchaseOrderId })*@
                                            <!--</td>-->
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
@Html.Raw(TempData["Success"])

