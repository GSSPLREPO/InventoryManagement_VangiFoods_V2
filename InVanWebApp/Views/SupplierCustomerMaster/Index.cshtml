@model IEnumerable<InVanWebApp_BO.CompanyBO>
@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Item</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Supplier or Customer</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i><a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Supplier or Customer</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title">@Html.ActionLink("Add Supplier/Customer", "AddSupplierCustomer")</h1>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Company Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Company Type")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Contact Person")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Email ID")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Remarks")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CompanyName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CompanyType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactPersonName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmailId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Remarks)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "AddSupplierCustomerMaster", new { ID = item.ID }) |
                                                @Html.ActionLink("Delete", "DeleteSupplierCustomerMaster", new { ID = item.ID })
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])