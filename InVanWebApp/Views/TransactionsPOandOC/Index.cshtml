                @Html.DropDownList("CompanyID", (IEnumerable<SelectListItem>)ViewData["company"], "--Select Buyer--",
            new { @class = "form-control", @onchange="ChangeEventCompanyDd()"})
            </div>
            <div class="modal-footer"></div>
        </div>

    </div>
</div>
