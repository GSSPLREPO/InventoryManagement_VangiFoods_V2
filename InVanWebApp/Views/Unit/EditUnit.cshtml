@model InVanWebApp.DAL.UnitMaster
@{
    ViewBag.Title = "EditUnit";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Unit</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.UnitID)

            <div class="form-group">
                @Html.Label("Unit Name")
                @Html.EditorFor(model => model.UnitName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UnitName, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Unit Code")
                @Html.EditorFor(model => model.UnitCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UnitCode, "", new { @class = "error mt-2 text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Description")
                @Html.EditorFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "error mt-2 text-danger" })
            </div>

            <button type="submit" class="btn btn-primary mr-2">Update</button>
            @Html.ActionLink("Back to List", "Index", new { @class = "font-weight-light" })

        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}