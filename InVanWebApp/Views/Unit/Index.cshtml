@model IEnumerable<InVanWebApp.DAL.UnitMaster>
@{
    ViewBag.Title = "Unit Master";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<h5>Unit Master</h5>
<p>
    @Html.ActionLink("Add Unit", "AddUnit")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UnitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUnit", new { UnitID = item.UnitID }) |
                @*@Html.ActionLink("Delete", "DeleteUnit", new { UnitId = item.UnitID})*@
                @Html.ActionLink("Delete", "Delete", new { UnitId = item.UnitID})
            </td>
        </tr>
    }
</table>