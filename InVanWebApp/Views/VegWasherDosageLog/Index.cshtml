@model IEnumerable<InVanWebApp_BO.VegWasherDosageLogBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<style>
    .table th {
        text-align: center;
    }

    th[colspan="5"] {
        text-align: center;
    }

    table.table-bordered.dataTable th, table.table-bordered.dataTable td {
        text-align: center !important;
    }
</style>
<!DOCTYPE html>

<html>
<head>
    <title>Veg Washer Dosage Log</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Veg Washer Dosage Log</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Veg Washer Dosage Log</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddVegWasherDosageLog","VegWasherDosageLog")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Veg Washer Dosage Log
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                @*<table class="table table-striped table-bordered hover table-sm" id="VegWasherDosageLogdt">*@
                                <table id="VegWasherDosageLogdt" class="table table-striped table-bordered hover table-sm table-responsive-md" width="100%" style="table-layout: fixed;">
                                    <thead>
                                        <tr style="border:medium">
                                            <th rowspan="2">@Html.DisplayName("Date")</th>
                                            <th colspan="3">@Html.DisplayName("Veg Washer-1")</th>
                                            <th colspan="3">@Html.DisplayName("Veg Washer-2")</th>
                                            <th rowspan="2">@Html.DisplayName("Verify By")</th>
                                            <th rowspan="2">@Html.DisplayName("Action")</th>
                                        </tr>
                                        <tr>
                                            @*<th>@Html.DisplayName("Date")</th>*@
                                            <th>@Html.DisplayName("Solution-A (ml)")</th>
                                            <th>@Html.DisplayName("Solution-B (ml)")</th>
                                            <th>@Html.DisplayName("Name of Item")</th>
                                            @*<th>@Html.DisplayName("Washing Time")</th>
                                                <th>@Html.DisplayName("PPM")</th>*@
                                            <th>@Html.DisplayName("Solution-A (ml)")</th>
                                            <th>@Html.DisplayName("Solution-B (ml)")</th>
                                            <th>@Html.DisplayName("Name of Item")</th>
                                            @*<th>@Html.DisplayName("Washing Time")</th>
                                                <th>@Html.DisplayName("PPM")</th>*@

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                                <td>@Html.DisplayFor(modelItem => item.VegWasher1SolutionAMl)</td>
                                                <td>@Html.DisplayFor(modelItem => item.VegWasher1SolutionBMl)</td>
                                                <td>@Html.DisplayFor(modelItem => item.NameOfItem1)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.WashingTime1)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Ppm1)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.VegWasher2SolutionAMl)</td>
                                                <td>@Html.DisplayFor(modelItem => item.VegWasher2SolutionBMl)</td>
                                                <td>@Html.DisplayFor(modelItem => item.NameOfItem2)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.WashingTime2)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Ppm2)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.VerifyByName)</td>
                                                <td>
                                                    <a href=@Url.Action("EditVegWasherDosageLog", "VegWasherDosageLog", new { Id = item.Id })>
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("Delete", "VegWasherDosageLog", new { Id = item.Id }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    @*<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/plug-ins/1.10.11/sorting/date-eu.js"></script>*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">


    <script type="text/javascript">
        $(document).ready(function () {
            $('#VegWasherDosageLogdt').dataTable().fnDestroy();
            $('#VegWasherDosageLogdt').dataTable({
                "iDisplayLength": 10,
                "columnDefs": [{ "targets": 3, "type": "date-eu" }],
                "order": [[3, 'desc']],
                "columnDefs": [
                    // Center align the header content of column 1
                    { "className": "dt-head-center", targets: -1 },
                ]
            });
        });

        var table = $('#VegWasherDosageLogdt').dataTable({
            "serverSide": false,
            "filter": true,
            //"columnDefs": [{ "targets": 3, "type": "date-eu" }],
            "order": [[3, 'desc']],
            "pageLength": 20
        });</script>
}

<style>
    th {
        white-space: break-spaces !important;
    }
</style>
