@model IEnumerable<InVanWebApp_BO.WaterAnalysisBO>

@{
    ViewBag.Title = "Water Analysis";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Water Analysis</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Water Analysis</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Water Analysis</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddWaterAnalysis", "WaterAnalysis")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Water Analysis
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                <table class="table table-striped table-bordered hover table-sm" id="WaterAnalysisdt">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Time")</th>
                                            @*<th>@Html.DisplayName("Production Area PH")</th>
                                            <th>@Html.DisplayName("Production Area TDS")</th>
                                            <th>@Html.DisplayName("Production Area Hardness")</th>
                                            <th>@Html.DisplayName("Production Area SaltAdded")</th>
                                            <th>@Html.DisplayName("Soft Water PH")</th>
                                            <th>@Html.DisplayName("Soft Water TDS")</th>
                                            <th>@Html.DisplayName("Soft Water Hardness")</th>
                                            <th>@Html.DisplayName("ETP Plant TEM")</th>
                                            <th>@Html.DisplayName("ETP Plant PH")</th>
                                            <th>@Html.DisplayName("ETP Plant TDS")</th>*@
                                            <th>@Html.DisplayName("TEM")</th>
                                            <th>@Html.DisplayName("Gas Reading")</th>
                                            <th>@Html.DisplayName("Verify By")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @{int SrNo = 1;}
                                            @foreach (var item in Model)
                                            {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => SrNo)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.dateGridBinding)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                           <td>@Html.DisplayFor(modelItem=>item.Time)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.PAPH)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PATDS)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PAHardness)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PASaltAdded)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SWPH)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SWTDS)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SWHardness)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ETPTEM)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ETPPH)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ETPTDS)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.TEM)</td>
                                            <td>@Html.DisplayFor(modelItem => item.GasReading)</td>
                                            <td>@Html.DisplayFor(modelItem => item.VerifyByName)</td>
                                            <td>

                                                <a href=@Url.Action("EditWaterAnalysis", "WaterAnalysis", new { Id = item.Id })>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("Delete", "WaterAnalysis", new { Id = item.Id }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        SrNo++;
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

