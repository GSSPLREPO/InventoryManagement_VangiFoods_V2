<script type="text/javascript">

    //Vedant added 'function createCustomDropdown()' 05-07-2023. start
    $(document).ready(function () {
        createCustomDropdown_WorkOrderNumber();
        createCustomDropdown_BatchNumber();
    });

    function createCustomDropdown_WorkOrderNumber() {
        $('select#WorkOrderNumber').each(function (i, select) {
            if (!$(this).next().hasClass('dropdown-select')) {
                $('#WorkOrderNumber').removeClass('form-control');
                $(this).after('<div id="divWorkOrderNumber" class="dropdown-select wide d-flex align-items-center' + ($(this).attr('class') || '') + '" tabindex="0"><span class="current"></span><div class="list"><ul></ul></div></div>');
                var dropdown = $(this).next();
                var options = $(select).find('option');
                var selected = $(this).find('option:selected');
                dropdown.find('.current').html(selected.data('display-text') || selected.text());
                options.each(function (j, o) {
                    var display = $(o).data('display-text') || '';
                    dropdown.find('ul').append('<li class="option ' + ($(o).is(':selected') ? 'selected' : '') + '" data-value="' + $(o).val() + '" data-display-text="' + display + '">' + $(o).text() + '</li>');
                });
            }
        });
        $('#divWorkOrderNumber.dropdown-select ul').before('<div class="dd-search"><input id="txtSearchValueWorkOrderNumber" autocomplete="off" onkeyup="filterWorkOrderNumber()" class="dd-searchbox" type="text" placeholder="Search for list" ><br />&nbsp;<span id="faSearch"><i class="fas fa-search"></i></span></div>');
    }
    function filterWorkOrderNumber() {
        var valThis = $('#txtSearchValueWorkOrderNumber').val();
        $('.dropdown-select ul > li').each(function () {
            var text = $(this).text();
            (text.toLowerCase().indexOf(valThis.toLowerCase()) > -1) ? $(this).show() : $(this).hide();
        });
    };

    function createCustomDropdown_BatchNumber() {
        $('select#BatchNumber').each(function (i, select) {
            if (!$(this).next().hasClass('dropdown-select')) {
                $('#BatchNumber').removeClass('form-control');
                $(this).after('<div id="divBatchNumber" class="dropdown-select wide d-flex align-items-center' + ($(this).attr('class') || '') + '" tabindex="0"><span class="current"></span><div class="list"><ul></ul></div></div>');
                var dropdown = $(this).next();
                var options = $(select).find('option');
                var selected = $(this).find('option:selected');
                dropdown.find('.current').html(selected.data('display-text') || selected.text());
                options.each(function (j, o) {
                    var display = $(o).data('display-text') || '';
                    dropdown.find('ul').append('<li class="option ' + ($(o).is(':selected') ? 'selected' : '') + '" data-value="' + $(o).val() + '" data-display-text="' + display + '">' + $(o).text() + '</li>');
                });
            }
        });
        $('#divBatchNumber.dropdown-select ul').before('<div class="dd-search"><input id="txtSearchValueBatchNumber" autocomplete="off" onkeyup="filterBatchNumber()" class="dd-searchbox" type="text" placeholder="Search for list" ><br />&nbsp;<span id="faSearch"><i class="fas fa-search"></i></span></div>');
    }
    function filterBatchNumber() {
        var valThis = $('#txtSearchValueBatchNumber').val();
        $('.dropdown-select ul > li').each(function () {
            var text = $(this).text();
            (text.toLowerCase().indexOf(valThis.toLowerCase()) > -1) ? $(this).show() : $(this).hide();
        });
    };

    // Event listeners

    // Open/close
    $(document).on('click', '.dropdown-select', function (event) {
        if ($(event.target).hasClass('dd-searchbox')) {
            return;
        }
        $('.dropdown-select').not($(this)).removeClass('open');
        $(this).toggleClass('open');
        if ($(this).hasClass('open')) {
            $(this).find('.option').attr('tabindex', 0);
            $(this).find('.selected').focus();
        } else {
            $(this).find('.option').removeAttr('tabindex');
            $(this).focus();
        }
    });
    // Close when clicking outside
    $(document).on('click', function (event) {
        if ($(event.target).closest('.dropdown-select').length === 0) {
            $('.dropdown-select').removeClass('open');
            $('.dropdown-select .option').removeAttr('tabindex');
        }
        event.stopPropagation();
    });
    // Option click
    $(document).on('click', '.dropdown-select .option', function (event) {
        $(this).closest('.list').find('.selected').removeClass('selected');
        $(this).addClass('selected');
        var text = $(this).data('display-text') || $(this).text();
        $(this).closest('.dropdown-select').find('.current').text(text);
        $(this).closest('.dropdown-select').prev('select').val($(this).data('value')).trigger('change');
    });

    // Keyboard events
    $(document).on('keydown', '.dropdown-select', function (event) {
        var focused_option = $($(this).find('.list .option:focus')[0] || $(this).find('.list .option.selected')[0]);
        // Space or Enter
        //if (event.keyCode == 32 || event.keyCode == 13) {
        if (event.keyCode == 13) {
            if ($(this).hasClass('open')) {
                focused_option.trigger('click');
            } else {
                $(this).trigger('click');
            }
            return false;
            // Down
        } else if (event.keyCode == 40) {
            if (!$(this).hasClass('open')) {
                $(this).trigger('click');
            } else {
                focused_option.next().focus();
            }
            return false;
            // Up
        } else if (event.keyCode == 38) {
            if (!$(this).hasClass('open')) {
                $(this).trigger('click');
            } else {
                var focused_option = $($(this).find('.list .option:focus')[0] || $(this).find('.list .option.selected')[0]);
                focused_option.prev().focus();
            }
            return false;
            // Esc
        } else if (event.keyCode == 27) {
            if ($(this).hasClass('open')) {
                $(this).trigger('click');
            }
            return false;
        }
    });
    //Vedant added 'function createCustomDropdown()' 05-07-2023. end


    $(document).ready(function () {
        setCurrentDate();
        $('#fromDateValidate').hide();
        $('#toDateValidate').hide();
    });

    function SelectedIndexChangedWONumber(id) {
        $('#WOValidate').hide();
        var WOId = $('#WorkOrderNumber').val();
        if (WOId == '' || WOId == null) {
            WOId = 0;
        }

        if (WOId != 0) {
            $.ajax({
                url: '/Dashb_RTWarehouseWiseStock/BatchNumber?WOId=' + WOId,
                type: "POST",
                data: {},
                success: function (result) {
                    var count = result.length;
                    var i = 0;
                    $("#BatchNumber option").remove();
                    $("#BatchNumber").append($("<option></option>").val('').html('--All--'));
                    while (i < count) {
                        $("#BatchNumber").append($("<option></option>").val(result[i].BatchNumber).html(result[i].BatchNumber));
                        i++;
                    }
                },
                error: function (err) {
                    alert('Not able to fetch batch number!');

                }
            });
        }
        else {
            $("#BatchNumber option").remove();
            $("#BatchNumber").append($("<option></option>").val('').html('--All--'));
        }

    }

    function setCurrentDate() {
        var now = new Date();
        var day = ("0" + now.getDate()).slice(-2);
        var month = ("0" + (now.getMonth() + 1)).slice(-2);
        var today = now.getFullYear() + "-" + (month) + "-" + (day);
        $('#fromDate').val(today);
        $('#toDate').val(today);
    }
    function OnChangedFromDate() {
        $('#fromDateValidate').hide();
    }

    function OnChangedToDate() {
        $('#toDateValidate').hide();
    }

    $("#btnGo").on("click", function () {
        var fromDate = $("#fromDate").val();
        var toDate = $("#toDate").val();

        if (fromDate == null || fromDate == "") {
            $('#fromDateValidate').text('Select from date!');
            $('#fromDateValidate').show();
            $("#fromDate").focus();
            return;
        }

        if (toDate == null || toDate == "") {
            $('#toDateValidate').text('Select to date!');
            $('#toDateValidate').show();
            $("#toDate").focus();
            return;
        }

        if (fromDate > toDate) {
            alert('Invalid Date! To date is less than from date!');
            $('#fromDate').focus();
            return;
        }

        $(".spinner-wrapper").fadeIn("slow");

        var name = Array();
        var data = Array();
        //var dataWO = Array();
        var dataArrayFinal = Array();

        var WorkOrderNumberId = $("#WorkOrderNumber option:selected").text();
        if (WorkOrderNumberId == '' || WorkOrderNumberId == null || WorkOrderNumberId == '--All--')
            WorkOrderNumberId = 0;

        var BatchNumberId = $("#BatchNumber option:selected").text();
        if (BatchNumberId == '' || BatchNumberId == null || BatchNumberId == '--All--')
            BatchNumberId = 0;

        //-----------Bind data in the graph Start-----------------------------------------------------------
        var request = $.ajax({

            url: "/Dashb_RTWarehouseWiseStock/GetProductionUtilityConsumptionByBatchDashboard?fromDate=" + fromDate + "&toDate=" + toDate + "&BatchNumber=" + BatchNumberId + "&WorkOrderNumber=" + WorkOrderNumberId,

            contentType: 'application/json;',
            dataType: 'json',
            type: "POST",
            success: function (result) {
                ond = result;
                var parsed = $.parseJSON(result);
                //console.log(parsed);
                var dataLength = parsed.length;

                for (i = 0; i < dataLength; i++) {
                    //name[i] = parsed[i].ItemName + '<br> (' + parsed[i].WorkOrderNumber + ')' + '<br> (' + parsed[i].BatchNumber + ')';
                    name[i] = parsed[i].ItemName;
                    data[i] = parsed[i].RawMaterialCost;
                    //dataWO[i] = parsed[i].WorkOrderNumber;
                }

                for (j = 0; j < name.length; j++) {
                    var temp = new Array(name[j], data[j]);
                    dataArrayFinal[j] = temp;
                }
                console.log(dataArrayFinal);

                const chart=Highcharts.chart('itemName', {
                    chart: {
                        plotBackgroundColor: null,
                        plotBorderWidth: null,
                        plotShadow: false,
                    },
                    title: {
                        text: 'Raw <br>Material <br>Consumption <br>By Batch',
                        align: 'center',
                        verticalAlign: 'middle',
                        y: 50
                    },
                    exporting: {
                        filename: "Raw Material Consumption By Batch"
                    },
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.y} KG {series.dataWO}</b>'
                    },
                    accessibility: {
                        point: {
                            valueSuffix: ' KG'
                        }
                    },
                    plotOptions: {
                        pie: {
                            dataLabels: {
                                enabled: false,
                                distance: -50,
                                style: {
                                    fontWeight: 'bold',
                                    color: 'white'
                                }
                            },
                            startAngle: -90,
                            endAngle: 90,
                            center: ['50%', '75%'],
                            size: '110%',
                            showInLegend: true
                        }
                    },
                    series: [{
                        type: 'pie',
                        innerSize: '50%',
                        name: 'Raw Material Consumption',
                        data: dataArrayFinal
                    }]
                });

                setTimeout(function () {
                    chart.update({
                        exporting: {
                            filename: "Raw_Material_Consumption_By_Batch"
                        }
                    });
                }, 2000);

                if (dataLength > 0) {
                    $("#itemName").show();
                    $("#NoDataFound").hide();
                } else {
                    $("#itemName").hide();
                    $("#NoDataFound").show();

                }

            }

        });
        //-----------Bind data in the graph End-------------------------------------------------------------

        $(".spinner-wrapper").fadeOut("slow");

    });
</script>

