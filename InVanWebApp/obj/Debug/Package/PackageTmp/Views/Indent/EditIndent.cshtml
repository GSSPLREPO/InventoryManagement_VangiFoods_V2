                    $('#btnSave').prop('disabled', true);
                    event.preventDefault();
                    return;
                }
                else {
                    flag = 1;
                }

                i++;

            }
            if (flag != 1) {
                alert("Required quantity is zero or null! Cannot update indent!");
                $('#btnSave').prop('disabled', true);
                return;
            }
            else
                $('#btnSave').prop('disabled', false);
        }

