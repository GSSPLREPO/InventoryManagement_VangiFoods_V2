                ", \"FinalQty\": " + FinalQty + ", \"ItemUnit\": \"" + Unit + "\", \"Percentage\": " + Percentage;

            if (i == (rowCount - 2))
                TxtItemDetails = TxtItemDetails + "}";
            else
                TxtItemDetails = TxtItemDetails + "},";
        }
        TxtItemDetails = TxtItemDetails + "]"
        $('#TxtItemDetails').val(TxtItemDetails);
