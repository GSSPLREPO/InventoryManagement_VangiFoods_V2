@model InVanWebApp_BO.RQCCPBO
@{
    ViewBag.Title = "EditRQCCP";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

@using (Html.BeginForm("EditRQCCP", "RQCCP", FormMethod.Post))
{
    <div class="card">
        <div class="card-body">
            <h4>Edit RQ CCP</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Date")
