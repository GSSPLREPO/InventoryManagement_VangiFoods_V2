                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownList("PoNumber", (IEnumerable<SelectListItem>)ViewData["PONumberdd"], "--Select--", new { @class = "form-control", @id = "POId", onchange = "SelectedIndexChangedItem()" })
