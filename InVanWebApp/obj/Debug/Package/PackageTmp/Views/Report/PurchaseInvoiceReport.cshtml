                                                new SelectListItem { Text = "Paid", Value = "Paid" },
                                                new SelectListItem { Text = "Un-Paid", Value = "Un-Paid" },
                                                new SelectListItem { Text = "Hold", Value = "Hold" }}, new { @class = "form-control DropdownRegular", @id = "Status" })

