@model InVanWebApp_BO.StockMasterBO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Inward Note</title>
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stock Report</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Reports</a>
                    </li>
                    <li class="breadcrumb-item active">Stock Report</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Items</label>
                                </div>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(model => model.ItemID, (IEnumerable<SelectListItem>)ViewData["Item"], "--All--", new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    <label>Item Category </label>
                                </div>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(model => model.ItemCategoryNameID, (IEnumerable<SelectListItem>)ViewData["ItemCategoryName"], "--All--", new { @class = "form-control DropdownRegular" })
                                </div>
                                <div class="col-md-2">
                                    <button id="btnGo" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);float:left;">Go</button>
                                </div>
                            </div>
                            <div class="col-md-12 mb-2" style="float:left;padding-left:89.3%;">
                                <a id="ExportPdf" style="font-size: 50px;" href="@Url.Action("ExprotAsPDF", "StockReport")"><img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /></a>
                                <a id="ExportExcel" style="font-size: 50px;" href="@Url.Action("ExportAsExcel", "StockReport")"><img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px;" /></a>
                            </div>
                            <br />


                            <table id="tblStockReport" class="ui celled table table-striped table-bordered hover table-sm">
                                <thead class="text-center" style="text-align:center">
                                    <tr>
                                        @*<th>ID</th>*@
                                        <th style="text-align:center">Sr. No.</th>
                                        <th style="text-align:center">Item Code</th>
                                        <th style="text-align:center">Item Name</th>
                                        <th style="text-align:center">Category</th>
                                        <th style="text-align:center">Item Unit Price (Rs)</th>
                                        <th style="text-align:center">Stock Quantity (KG)</th>
                                        <th style="text-align:center">Item Unit</th>
                                        <th style="text-align:center">Inventory Value (Rs)</th>
                                        <th style="text-align:center">Reorder</th>
                                        <th style="text-align:center">Reorder Level (KG)</th>
                                        <th style="text-align:center">Item Reorder Quantity (KG)</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts{
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <link href="~/Theme/MainContent/css/CustomDropdown.css" rel="stylesheet" />

    <script type="text/javascript">

        //Vedant added 'function createCustomDropdown()' 07/07/23. start
        $(document).ready(function () {
            BindStockReport();
            createCustomDropdown_ItemID();
        });

        function createCustomDropdown_ItemID() {
            $('select#ItemID').each(function (i, select) {

                if (!$(this).next().hasClass('dropdown-select')) {

                    $('#ItemID').removeClass('form-control');
                    $(this).after('<div id="divItemID" class="dropdown-select wide d-flex align-items-center' + ($(this).attr('class') || '') + '" tabindex="0"><span class="current"></span><div class="list"><ul></ul></div></div>');
                    var dropdown = $(this).next();
                    var options = $(select).find('option');
                    var selected = $(this).find('option:selected');
                    dropdown.find('.current').html(selected.data('display-text') || selected.text());
                    options.each(function (j, o) {
                        var display = $(o).data('display-text') || '';
                        dropdown.find('ul').append('<li class="option ' + ($(o).is(':selected') ? 'selected' : '') + '" data-value="' + $(o).val() + '" data-display-text="' + display + '">' + $(o).text() + '</li>');
                    });
                }
            });
            $('#divItemID.dropdown-select ul').before('<div class="dd-search"><input id="txtSearchValueItemID" autocomplete="off" onkeyup="filterItemID()" class="dd-searchbox" type="text" placeholder="Search for list" ><br />&nbsp;<span id="faSearch"><i class="fas fa-search"></i></span></div>');

        }
        function filterItemID() {
            var valThis = $('#txtSearchValueItemID').val();
            $('.dropdown-select ul > li').each(function () {
                var text = $(this).text();
                (text.toLowerCase().indexOf(valThis.toLowerCase()) > -1) ? $(this).show() : $(this).hide();
            });
        };

        // Event listeners

        // Open/close
        $(document).on('click', '.dropdown-select', function (event) {
            if ($(event.target).hasClass('dd-searchbox')) {
                return;
            }
            $('.dropdown-select').not($(this)).removeClass('open');
            $(this).toggleClass('open');
            if ($(this).hasClass('open')) {
                $(this).find('.option').attr('tabindex', 0);
                $(this).find('.selected').focus();
            } else {
                $(this).find('.option').removeAttr('tabindex');
                $(this).focus();
            }
        });
        // Close when clicking outside
        $(document).on('click', function (event) {
            if ($(event.target).closest('.dropdown-select').length === 0) {
                $('.dropdown-select').removeClass('open');
                $('.dropdown-select .option').removeAttr('tabindex');
            }
            event.stopPropagation();
        });
        // Option click
        $(document).on('click', '.dropdown-select .option', function (event) {
            $(this).closest('.list').find('.selected').removeClass('selected');
            $(this).addClass('selected');
            var text = $(this).data('display-text') || $(this).text();
            $(this).closest('.dropdown-select').find('.current').text(text);
            $(this).closest('.dropdown-select').prev('select').val($(this).data('value')).trigger('change');
        });

        // Keyboard events
        $(document).on('keydown', '.dropdown-select', function (event) {
            var focused_option = $($(this).find('.list .option:focus')[0] || $(this).find('.list .option.selected')[0]);
            // Space or Enter
            //if (event.keyCode == 32 || event.keyCode == 13) {
            if (event.keyCode == 13) {
                if ($(this).hasClass('open')) {
                    focused_option.trigger('click');
                } else {
                    $(this).trigger('click');
                }
                return false;
                // Down
            } else if (event.keyCode == 40) {
                if (!$(this).hasClass('open')) {
                    $(this).trigger('click');
                } else {
                    focused_option.next().focus();
                }
                return false;
                // Up
            } else if (event.keyCode == 38) {
                if (!$(this).hasClass('open')) {
                    $(this).trigger('click');
                } else {
                    var focused_option = $($(this).find('.list .option:focus')[0] || $(this).find('.list .option.selected')[0]);
                    focused_option.prev().focus();
                }
                return false;
                // Esc
            } else if (event.keyCode == 27) {
                if ($(this).hasClass('open')) {
                    $(this).trigger('click');
                }
                return false;
            }
        });

    //Vedant added 'function createCustomDropdown()' 07/07/23. end


        function BindStockReport() {
            $('#tblStockReport').dataTable().fnDestroy();
            var t = $('#tblStockReport').DataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "sAjaxSource": "/StockReport/GetStock",
                "pageLength": 10,
                "scrollX": true,
                "columns": [
                    /* { "data": "ID", "autoWidth": true },*/
                    { "data": "ID", "autoWidth": true },
                    { "data": "Item_Code", "autoWidth": true },
                    { "data": "ItemName", "autoWidth": true },
                    { "data": "ItemCategory", "autoWidth": true },
                    { "data": "ItemUnitPrice", "autoWidth": true },
                    { "data": "StockQuantity", "autoWidth": true },
                    { "data": "ItemUnit", "autoWidth": true },
                    { "data": "InventoryValue", "autoWidth": true },
                    { "data": "Reorder", "autoWidth": true },
                    { "data": "ReOrderLevel", "autoWidth": true },
                    { "data": "ItemReOrderQuantity", "autoWidth": true },
                ]
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();
        }

        $("#btnGo").on("click", function () {
            var ItemId = $('#ItemID').val();
            if (ItemId == '' || ItemId == null)
                ItemId = 0;

            //Added by Snehal on 23-06-2023 start
            var ItemCategoryNameID = $('#ItemCategoryNameID').val();
            if (ItemCategoryNameID == '' || ItemCategoryNameID == null)
                ItemCategoryNameID = 0;
            //Added by Snehal on 23-06-2023 end

            $('#tblStockReport').dataTable().fnDestroy();
            var t = $('#tblStockReport').DataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                //"sAjaxSource": "/StockReport/GetStock?id=" + ItemId, 
                "sAjaxSource": "/StockReport/GetStock?id=" + ItemId + "&itemCategoryNameID=" + ItemCategoryNameID,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    var flag = parseFloat(result.length);

                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "pageLength": 10,
                "scrollX": true,
                "columns": [                    
                    { "data": "ID", "autoWidth": true },
                    { "data": "Item_Code", "autoWidth": true },
                    { "data": "ItemName", "autoWidth": true },
                    { "data": "ItemCategory", "autoWidth": true },
                    { "data": "ItemUnitPrice", "autoWidth": true },
                    { "data": "StockQuantity", "autoWidth": true },
                    { "data": "ItemUnit", "autoWidth": true },
                    { "data": "InventoryValue", "autoWidth": true },
                    { "data": "Reorder", "autoWidth": true },
                    { "data": "ReOrderLevel", "autoWidth": true },
                    { "data": "ItemReOrderQuantity", "autoWidth": true },
                ]
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();
        });

    </script>
    }
