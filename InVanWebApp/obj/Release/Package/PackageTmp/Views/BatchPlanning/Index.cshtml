@model IEnumerable<InVanWebApp_BO.BatchPlanningMasterBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Batch Planning</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Batch Planning</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Production</a>
                    </li>
                    <li class="breadcrumb-item active">Batch Planning</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">                           
                            <a href="@Url.Action("AddBatchPlanning","BatchPlanning")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Batch Planning
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered" id="tblInward">
                                    <thead>
                                        <tr>
                                            <th>@Html.Label("Batch Planning Number")</th>
                                            <th>@Html.Label("Batch Planning Date")</th>
                                            <th>@Html.Label("Work Order Number")</th>
                                            <th>@Html.Label("SO Number")</th>
                                            <th>@Html.Label("Product Name")</th>
                                            <th>@Html.Label("Batch Size")</th>
                                            <th>@Html.Label("Batch Count")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.BatchPlanningDocumentNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.WorkOrderNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.SONumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TotalBatchSize)</td>
                                                <td>@Html.DisplayFor(modelItem => item.TotalNoBatches)</td>
                                                <td>
                                                    <a href=@Url.Action("ViewIBatchPlanning", "BatchPlanning", new { ID = item.ID })>
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a>&emsp;
                                                    <a href=@Url.Action("DeleteIBatchPlanning", "BatchPlanning", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

