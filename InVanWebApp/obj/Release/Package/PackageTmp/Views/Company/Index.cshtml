@model IEnumerable<InVanWebApp_BO.CompanyBO>
@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Item</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Supplier or Customer</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i><a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Supplier or Customer</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <button class="btn btn-primary" style="float:right">Add</button>
                            @*<h1 class="card-title">@Html.ActionLink("Add Supplier/Customer", "AddSupplierCustomer")</h1>*@
                            @*<div class="table-responsive">*@
                            <div id="js-grid-static" class="jsgrid" style="position: relative; height: 500px; width: 100%;">
                                <br />
                                <div class="jsgrid-grid-header jsgrid-header-scrollbar">
                                    <table class="jsgrid-table">
                                        <tr class="jsgrid-header-row">
                                            <th class="jsgrid-header-cell jsgrid-header-sortable jsgrid-header-sort jsgrid-header-sort-asc" style="width: 150px;">
                                                @Html.DisplayName("Company Name")
                                            </th>
                                            <th class="jsgrid-header-cell jsgrid-header-sortable jsgrid-header-sort jsgrid-header-sort-asc" style="width: 150px;">
                                                @Html.DisplayName("Contact Person")
                                            </th>
                                            <th class="jsgrid-header-cell jsgrid-header-sortable jsgrid-header-sort jsgrid-header-sort-asc" style="width: 150px;">
                                                @Html.DisplayName("Email ID")
                                            </th>
                                            <th class="jsgrid-header-cell jsgrid-header-sortable jsgrid-header-sort jsgrid-header-sort-asc" style="width: 150px;">
                                                @Html.DisplayName("Contact Number")
                                            </th>
                                            <th class="jsgrid-header-cell jsgrid-header-sortable jsgrid-header-sort jsgrid-header-sort-asc" style="width: 150px;">
                                                @Html.DisplayName("City Name")
                                            </th>
                                            <th class="jsgrid-header-cell jsgrid-header-sortable jsgrid-header-sort jsgrid-header-sort-asc" style="width: 150px;">
                                                @Html.DisplayName("Edit/Delete")
                                            </th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr class="jsgrid-row">
                                                <td class="jsgrid-cell" style="width: 150px;">
                                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                                </td>
                                                <td class="jsgrid-cell" style="width: 150px;">
                                                    @Html.DisplayFor(modelItem => item.ContactPersonName)
                                                </td>
                                                <td class="jsgrid-cell" style="width: 150px;">
                                                    @Html.DisplayFor(modelItem => item.EmailId)
                                                </td>
                                                <td class="jsgrid-cell" style="width: 150px;">
                                                    @Html.DisplayFor(modelItem => item.ContactPersonNo)
                                                </td>
                                                <td class="jsgrid-cell" style="width: 150px;">
                                                    @Html.DisplayFor(modelItem => item.CityName)
                                                </td>
                                                <td class="jsgrid-cell" style="width: 150px;">
                                                    @Html.ActionLink("Edit", "AddSupplierCustomerMaster", new { ID = item.ID }) |
                                                    @Html.ActionLink("Delete", "DeleteSupplierCustomer", new { ID = item.ID, },
                                                    new { onclick = "return confirm('Are you sure, you wants to delete?');" })

                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            
                                <div class="jsgrid-pager-container">
                                    <div class="jsgrid-pager">
                                        Pages:
                                        <span class="jsgrid-pager-nav-button jsgrid-pager-nav-inactive-button">
                                            <a href="javascript:void(0);">First</a>
                                        </span>
                                        <span class="jsgrid-pager-nav-button jsgrid-pager-nav-inactive-button">
                                            <a href="javascript:void(0);">Prev</a>
                                        </span>
                                        <span class="jsgrid-pager-page jsgrid-pager-current-page">1</span>
                                        <span class="jsgrid-pager-page">
                                            <a href="javascript:void(0);">2</a>
                                        </span>
                                        <span class="jsgrid-pager-page">
                                            <a href="javascript:void(0);">3</a>
                                        </span>
                                        <span class="jsgrid-pager-nav-button">
                                            <a href="javascript:void(0);">Next</a>
                                        </span>
                                        <span class="jsgrid-pager-nav-button">
                                            <a href="javascript:void(0);">Last</a>
                                        </span>
                                        &nbsp;&nbsp; 
                                        1 of 3
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])