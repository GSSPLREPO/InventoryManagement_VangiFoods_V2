@model IEnumerable<InVanWebApp_BO.CreditNoteBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Credit Note</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Credit Note</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Credit Note</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItemType")</h1>*@
                            <a href="@Url.Action("AddCreditNote","CreditNote")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Credit Note
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                @*<table class="table table-striped table-bordered" id="tblInward">*@
                                <table class="table table-striped table-bordered hover table-sm" id="tblCreditNote">
                                    <thead>
                                        <tr>
                                            <th>@Html.Label("Credit Note Number")</th>
                                            <th>@Html.Label("Credit Note Date")</th>
                                            <th>@Html.Label("PO Number")</th>
                                            <th>@Html.Label("Vendor")</th>
                                            <th>@Html.Label("Remarks")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.CreditNoteNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.CreditNoteDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PO_Number)</td>
                                                <td>@Html.DisplayFor(modelItem => item.VendorName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Remarks)</td>
                                                <td>
                                                    <a href=@Url.Action("ViewCreditNote", "CreditNote", new { ID = item.ID })>
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a>&emsp;
                                                    <a href=@Url.Action("DeleteCreditNote", "CreditNote", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <h7 class="text-danger font-bold" style="font-size:x-small;float:right;">NOTE*: Please note credit note can be created of PO whose inward and inward QC are completed!</h7>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@


    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblCreditNote').dataTable().fnDestroy();
            $('#tblCreditNote').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tblCreditNote').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}