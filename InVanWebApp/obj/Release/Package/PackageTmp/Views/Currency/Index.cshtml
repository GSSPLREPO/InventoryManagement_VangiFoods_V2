@*@model IEnumerable<InVanWebApp.DAL.ItemMaster>*@
@model IEnumerable<InVanWebApp_BO.CurrencyBO>
@{
    ViewBag.Title = "Currency";
    Layout = "~/Views/Shared/MainMaster.cshtml";

}
<!DOCTYPE html>

<html>
<head>
    <title>Currency</title>
    <style>
        table {
            border-spacing: 0px;
            /*table-layout: fixed;*/
            margin-left: auto;
            margin-right: auto;
        }

        td {
            word-break: break-all;
        }
    </style>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Currency</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Currency</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItemType")</h1>*@
                            <a href="@Url.Action("AddCurrency","Currency")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Currency
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.UnitName)*@
                                            @Html.DisplayName("Currency Name")
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Description)*@
                                            @Html.DisplayName("Value")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Indian Currency Value")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Actions")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                <tr>
                                    <td class="text-wrap">
                                        @Html.DisplayFor(modelItem => item.CurrencyName)
                                    </td>
                                    <td class="text-wrap">
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                    <td class="text-wrap">
                                        @Html.DisplayFor(modelItem => item.IndianCurrencyValue)
                                    </td>
                                    <td class="text-wrap">
                                        <a href=@Url.Action("EditCurrency", "Currency", new { ID = item.ID }) title="Edit Currency">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a> &emsp;
                                        <a href=@Url.Action("Delete", "Currency", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Currency">
                                            <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                        </a>
                                        @*@Html.ActionLink("Edit", "EditItemType", new { ID = item.ID }) |
            @Html.ActionLink("Delete", "DeleteItemType", new { ID = item.ID, },
               new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@

                                        @*@Html.ActionLink("Delete", "DeleteItemType", new { ID = item.ID })*@
                                    </td>
                                </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])