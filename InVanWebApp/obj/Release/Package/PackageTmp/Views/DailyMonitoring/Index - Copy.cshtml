    //});

    function OnChangedFromDate() {
        $('#fromDateValidate').hide();
    }

    function OnChangedToDate() {
        $('#toDateValidate').hide();
    }

    $("#btnGo").on("click", function () {
        var flag = 0;

        var fromDate = $("#fromDate").val();
        var toDate = $("#toDate").val();

        if (fromDate == null || fromDate == "") {
            $('#fromDateValidate').text('Select from date!');
            $('#fromDateValidate').show();
            $("#fromDate").focus();
            /*$('#DailyMonitoringdt').hide();*/
            return;
        }

        if (toDate == null || toDate == "") {
            $('#toDateValidate').text('Select to date!');
            $('#toDateValidate').show();
            $("#toDate").focus();
            /*$('#DailyMonitoringdt').hide();*/
            return;
        }

        if (fromDate > toDate) {
            alert('Invalid date!, To date is less than From date!');
            $('#fromDate').focus();
            /*$('#DailyMonitoringdt').hide();*/
            return;
        }


        $('#DailyMonitoringdt').dataTable().fnDestroy();
        var t = $('#DailyMonitoringdt').DataTable({
            "processing": true, // for show progress bar
            "serverSide": false, // for process server side
            "filter": true, // this is for disable filter (search box)
            "sAjaxSource": "/DailyMonitoring/GetAllDailyMonitoring?fromDate=" + fromDate + "&toDate=" + toDate,
            "initComplete": function (settings, json) {
                var result = JSON.stringify(json);
                var flag = parseFloat(result.length);

                if (flag > 11) {
                    $('#ExportPdf').show();
                    $('#ExportExcel').show();
                }
                else {
                    $('#ExportPdf').hide();
                    $('#ExportExcel').hide();
                }
            },
            "pageLength": 20,
            "scrollX": true,
            "columns": [
                { "data": "Date", "autoWidth": true },
                { "data": "PersonalHygine", "autoWidth": true },
                { "data": "CleaningAndSanitation", "autoWidth": true },
                { "data": "CleaningOfEquipment", "autoWidth": true },
                { "data": "WaterPotability", "autoWidth": true },
                { "data": "VerifyByName", "autoWidth": true },
                {
                    data: "Id", "render": function (data) {
                        return '<button type="button" id="' + data + '" class = "btn text-primary btnEdit"><i class="fa fa-edit"/></button>' +
                            '<button type="button" id="' + data + '" class = "btn text-danger btnDelete"><i class="fa fa-trash"/></button>'
                    }
                }
            ]
        });
        t.on('order.dt search.dt', function () {
            let i = 1;

            t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data(i++);
            });
        }).draw();
    });

                $(document).on("click", ".btnEdit", function () {
                    var id = $(this).attr("id");
                    window.location.href = '@Url.Action("EditDailyMonitoring", "DailyMonitoring", new { Id = "Id"})'.replace("Id", parseInt(id));
                });

                $(document).on("click", ".btnDelete", function () {
                    var id = $(this).attr("id");
                   // if (confirm("Are you Sure? You want to remove this Equipment")) {
                    if (confirm("Are you sure want to delete?")) {
                        window.location.href = '@Url.Action("Delete", "DailyMonitoring", new { Id = "Id"})'.replace("Id", parseInt(id));
                    }
                })

        </script>

    }
