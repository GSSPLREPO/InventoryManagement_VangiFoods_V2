@model InVanWebApp_BO.FinishedGoodSeriesBO
@{ ViewBag.Title = "ViewFinishedGoodSeries";
    Layout = "~/Views/Shared/MainMaster.cshtml"; }

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Finished Good Series</title>
    <style>
        html2canvas-container {
            width: 3000px !important;
            height: 2000px !important;
        }
    </style>
</head>
<body>
    @Html.HiddenFor(model => model.FGSID)
    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()
                <div class="row" id="printV" width="1000px">
                    <div class="col-md-12  grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <img src="~/Theme/MainContent/images/logo-mini.png" alt="client-logo" class="align-self-center" style="width:80px;height:50px;">
                                    <h3 class="card-title font-weight-bold align-self-center col-4 mb-0" style="font-size: 16pt;">Finished Good Series</h3>

                                    <div class="col">
                                        <div class="col-md-12">
                                            <img src="~/Theme/MainContent/images/ICON.png.png" id="btnExport" class="float-right" style="width:45px;height:45px" onclick="ExportPdfFunction('printV','FinishedGoodSeries',590, 400)" />
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Name of Product</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.ProductName, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Package Size of Product</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.PackageSize, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Manufacture Date of Product</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.MfgDate, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">No of Carton Box of Product</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.NoOfCartonBox, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Quantity of Product (kg)</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.QuantityInKG, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Batch No</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.BatchNo, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Sales Order Number </label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.SONo, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Packaging</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.Packaging, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Sealing</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.Sealing, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Labelling</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.Labelling, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Quality Control Check</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.QCCheck, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Expected Packets</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.ExpectedPackets, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Actual Packets</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.ActualPackets, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Expected Yield</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.ExpectedYield, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Actual Yield</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.ActualYield, new { style = "color:black;" })
                                        </div>
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Work Order No</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.WorkOrderNo, new { style = "color:black;" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="font-weight-bold">Remarks</label>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.DisplayFor(model => model.Remarks, new { style = "color:black;" })
                                        </div>
                                    </div>

                                </div>
                                <br />
                                <a href="@Url.Action("Index", "FinishedGoodSeries")" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b); float: right;" id="btnBack">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>}
</body>
</html>

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>

