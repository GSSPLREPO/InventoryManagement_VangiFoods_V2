@model IEnumerable<InVanWebApp_BO.GRN_BO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <title>GRN</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">GRN</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Goods Received Note</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItemType")</h1>*@
                            <a href="@Url.Action("AddGRN","GRN")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> GRN
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                @*<table class="table table-striped table-bordered" id="tblInward">*@
                                <table class="table table-striped table-bordered hover table-sm" id="tblInward">
                                    <thead>
                                        <tr>
                                            <th>@Html.Label("GRN Number")</th>
                                            <th>@Html.Label("GRN Date")</th>
                                            <th>@Html.Label("Inward QC Number")</th>
                                            <th>@Html.Label("Inward Number")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.GRNCode)</td>
                                                <td>@Html.DisplayFor(modelItem => item.GRNDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.InwardQCNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.InwardNoteNumber)</td>
                                                <td>
                                                    <a href=@Url.Action("ViewGRN", "GRN", new { ID = item.ID }) title="View GRN">
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a>&emsp;
                                                    @*<a href=@Url.Action("EditInwardNote", "InwardNote", new { ID = item.ID })>
                                                            <i class="fa fa-edit text-primary"></i>
                                                        </a> &emsp;*@
                                                    <a href=@Url.Action("DeleteGRN", "GRN", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete GRN">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                    @*@Html.ActionLink("Edit", "EditOrganisation", new { OrganisationId = item.OrganisationId }) |
                                                        @Html.ActionLink("Delete", "DeleteOrganisation", new { OrganisationId = item.OrganisationId, },
                                                             new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

