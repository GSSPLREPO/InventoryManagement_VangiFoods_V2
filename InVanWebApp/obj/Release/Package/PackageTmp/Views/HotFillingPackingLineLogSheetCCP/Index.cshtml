@model IEnumerable<InVanWebApp_BO.HotFillingPackingLineLogSheetCCPBO>

@{
    ViewBag.Title = "Hot Filling Packing Line Log Sheet CCP";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Stage-3 Packing CCP</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="HotFillingPackingLineLogSheetCCP">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stage-3 Packing CCP</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Production</a>
                    </li>
                    <li class="breadcrumb-item active">Stage-3 Packing CCP</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddHotFillingPackingLineLogSheetCCP","HotFillingPackingLineLogSheetCCP")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Packing CCP
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">

                                <table class="table table-striped table-bordered hover table-sm" id="HotFillingPackingLineLogSheetCCPdt">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Item Name")</th>
                                            <th>@Html.DisplayName("Release Time From SILO")</th>
                                            @*<th>@Html.DisplayName("Hot Line Temp(DC)")</th>*@
                                            @*<th>@Html.DisplayName("Product Temp(DC)")</th>*@
                                            @*<th>@Html.DisplayName("Cleaning & Hygine Checks")</th>*@
                                            @*<th>@Html.DisplayName("Random Weight(KG)")</th>*@
                                            @*<th>@Html.DisplayName("Monitoring Parameters")</th>*@
                                            @*(LEACKAGES, GAMAGES,SEAL STRENGTH)*@
                                            <th>@Html.DisplayName("Monitoring Filling Temp-93 to 95(°C)")</th>@*(PRODUCT FILLING TEMP.)*@
                                            <th>@Html.DisplayName("No of Pouches")</th>
                                            @*<th>@Html.DisplayName("Remarks")</th>*@
                                            <th>@Html.DisplayName("Corrective Actions")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>

                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @*<td>@Html.DisplayFor(modelItem => item.Date)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ReleaseTime)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.HotLineTemp)</td>*@
                                                @*<td>@Html.DisplayFor(modelItem => item.ProductTemp)</td>*@
                                                @*<td>@Html.DisplayFor(modelItem => item.CleaningHygine)</td>*@
                                                @*<td>@Html.DisplayFor(modelItem => item.RandomWeight)</td>*@
                                                @*<td>@Html.DisplayFor(modelItem => item.MonitoringParameters)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.MonitoringFilling)</td>
                                                <td>@Html.DisplayFor(modelItem => item.NoOfPouches)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.Remarks)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.CorrectiveActions)</td>
                                                <td>
                                                    <a href=@Url.Action("EditHotFillingPackingLineLogSheetCCP", "HotFillingPackingLineLogSheetCCP", new { ID = item.ID })>
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("Delete", "HotFillingPackingLineLogSheetCCP", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

