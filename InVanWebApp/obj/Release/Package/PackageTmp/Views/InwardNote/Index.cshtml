@model IEnumerable<InVanWebApp_BO.InwardNoteBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Inward Note</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Inward Note</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Inward Note</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItemType")</h1>*@
                            <a href="@Url.Action("AddInwardNote","InwardNote")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Inward Note
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered table-sm" id="tblInward">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Inward Number")</th>
                                            <th>@Html.DisplayName("Inward Date")</th>
                                            <th>@Html.DisplayName("PO Number")</th>
                                            <th>@Html.DisplayName("Edit/Delete")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.InwardNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.InwardDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PONumber)</td>
                                                <td>
                                                    <a href=@Url.Action("EditInwardNote", "InwardNote", new { ID = item.ID })>
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("DeleteInwardNote", "InwardNote", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                    @*@Html.ActionLink("Edit", "EditOrganisation", new { OrganisationId = item.OrganisationId }) |
                                                        @Html.ActionLink("Delete", "DeleteOrganisation", new { OrganisationId = item.OrganisationId, },
                                                             new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])
@section scripts{

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script type="text/javascript">
        var table = $('#tblInward').dataTable({
            "searching": true,
            "bLengthChange": false,
            "bPaginate": true
            //"pageLength": 15
        });
    </script>
}