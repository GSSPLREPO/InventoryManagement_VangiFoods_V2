@model IEnumerable<InVanWebApp_BO.InwardQCBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <title>Inward QC Sorting</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Inward QC (Check-1)</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">QC</a>
                    </li>
                    <li class="breadcrumb-item active">Inward QC (Check-1)</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItemType")</h1>*@
                            <a href="@Url.Action("AddInwardQC","InwardQCSorting")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Inward QC (Check-1)
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                @*<table class="table table-striped table-bordered" id="tblInward">*@
                                <table class="table table-striped table-bordered hover table-sm" id="tblInward">
                                    <thead>
                                        <tr>
                                            <th>@Html.Label("Inward QC Number")</th>
                                            <th>@Html.Label("Inward Number")</th>
                                            <th>@Html.Label("Inward QC Date")</th>
                                            @*<th>@Html.Label("Item Name")</th>
                                                <th>@Html.Label("Item Code")</th>
                                                <th>@Html.Label("Item Unit Price")</th>*@
                                            <th>@Html.Label("Total Sorted Quantity (Kg)")</th>
                                            <th>@Html.Label("Rejected Quantity (Kg)")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.InwardQCNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.InwardNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.InwardQCDate)</td>
                                                @*<td>@Html.DisplayFor(modelItem => item.Item_Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Item_Code)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.ItemUnitPrice)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.InwardQuantity)</td>
                                                <td>@Html.DisplayFor(modelItem => item.RejectedQuantity)</td>
                                                <td>
                                                    <a href=@Url.Action("ViewInwardQC", "InwardQCSorting", new { ID = item.ID }) title="View Inward-QC">
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a>&emsp;
                                                    @*<a href=@Url.Action("EditInwardNote", "InwardNote", new { ID = item.ID })>
                                                            <i class="fa fa-edit text-primary"></i>
                                                        </a> &emsp;*@
                                                    <a href=@Url.Action("DeleteInwardQC", "InwardQCSorting", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Inward-QC">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{
    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblInward').dataTable().fnDestroy();
            $('#tblInward').dataTable({
                "iDisplayLength": 10
            });
        });
        var table = $('#tblInward').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}
