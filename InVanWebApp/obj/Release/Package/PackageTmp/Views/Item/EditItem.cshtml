@model InVanWebApp_BO.ItemBO
@{
    ViewBag.Title = "Edit item";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h4>Edit Item</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)

            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Item Type")
                    <span style="color:red">*</span>
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("ItemTypeID", (IEnumerable<SelectListItem>)ViewData["ItemType"], "--Select Type--",
                   new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ItemTypeID, "", new { @class = "error mt-2 text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.Label("Item Category")
                    <span style="color:red">*</span>
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("ItemCategory_ID", (IEnumerable<SelectListItem>)ViewData["ItemCategory"], "--Select Category--",
                   new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ItemCategory_ID, "", new { @class = "error mt-2 text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Item Name")
                    <span style="color:red">*</span>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Item_Name, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.Item_Name, "", new { @class = "error mt-2 text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.Label("Item Code")
                    <span style="color:red">*</span>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Item_Code, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.Item_Code, "", new { @class = "error mt-2 text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.Label("HSN Code")
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.HSN_Code, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.HSN_Code, "", new { @class = "error mt-2 text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.Label("Minimum Stock")
                    <span style="color:red">*</span>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.MinStock, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.MinStock, "", new { @class = "error mt-2 text-danger" })
                </div>
            </div>
            <br />
            @*<div class="form-group">
                    @Html.Label("Tax")
                    @Html.DropDownList("Tax", new List<SelectListItem>
                    {
                        new SelectListItem{ Text="Tax: 0%", Value = "0%" },
                        new SelectListItem{ Text="Tax: 5%", Value = "5%" },
                        new SelectListItem{ Text="Tax: 18%", Value = "18%" },
                        new SelectListItem{ Text="Tax: 12%", Value = "12%" },
                        new SelectListItem{ Text="Tax: 3%", Value = "3%" },
                        new SelectListItem{ Text="Tax: 9%", Value = "9%" },
                        new SelectListItem{ Text="Tax: 0.1%", Value = "0.1%" },
                        new SelectListItem{ Text="Tax: 0.25%", Value = "0.25%" }
                    }, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tax, "", new { @class = "error mt-2 text-danger" })
                </div>*@

            <div class="row">
                <div class="col-md-2">
                    @Html.Label("Description")
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "error mt-2 text-danger" })
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary mr-2" style="background: linear-gradient(85deg, #392c70, #6a005b);">Update</button>
            <a href="@Url.Action("Index", "Item")" class="btn btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);">
                Back To List
            </a>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
