@model IEnumerable<InVanWebApp_BO.ItemCategoryMasterBO>
@{
    ViewBag.Title = "Item Category Master";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Item Category</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Item Category</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Item Category</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Category", "AddItemCategory")</h1>*@
                           
                            <a href="@Url.Action("AddItemCategory","ItemCategory")" class="btn btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Category
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Description)*@
                                            @Html.DisplayName("Item Category Name")
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.UnitName)*@
                                            @Html.DisplayName("Item Type Name")
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Description)*@
                                            @Html.DisplayName("Description")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ItemCategoryName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ItemTypeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "EditItemCategory", new { ItemCategoryID = item.ItemCategoryID }) |
                                                @Html.ActionLink("Delete", "DeleteItemCategory", new { ItemCategoryID = item.ItemCategoryID })
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])