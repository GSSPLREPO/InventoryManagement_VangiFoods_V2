@model IEnumerable<InVanWebApp_BO.MicroAnalysisBO>

@{
    ViewBag.Title = "Micro Analysis";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Micro Analysis</title>
    <style>
        th {
            white-space: break-spaces !important;
        }
    </style>
</head>
<body>

    <div class="content-wrapper" runat="server" id="MicroAnalysis">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Micro Analysis</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Daily Operations</a>
                    </li>
                    <li class="breadcrumb-item active">Micro Analysis</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>From Date:</label>
                                    <span style="color:red">*</span>
                                </div>
                                <div class="col-md-2">
                                    @Html.TextBox("fromDate", "{0:yyyy-MM-dd }", new { @id = "fromDate", @class = "datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedFromDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                    @Html.ValidationMessage("msgfromDate", "", new { id = "fromDateValidate", @class = "col-form-label error mt-2 text-danger" })
                                </div>
                                <div class="col-md-2">
                                    <label>To Date:</label>
                                    <span style="color:red">*</span>
                                </div>
                                <div class="col-md-2">
                                    @Html.TextBox("toDate", "{0:yyyy-MM-dd }", new { @id = "toDate", @class = " datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedToDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                    @Html.ValidationMessage("toDate", "", new { id = "toDateValidate", @class = "col-form-label error mt-2 text-danger" })
                                </div>
                                <div class="col-md-1">
                                    <button id="btnGo" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);float:left;">Go</button>
                                    @*<a id="ExportPdf" style="float:right;" href="@Url.Action("MicroAnalysisPDF", "MicroAnalysis")"> <img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /> </a>*@
                                    <a id="ExportExcel" style="float:right;" href="@Url.Action("MicroAnalysisExcel", "MicroAnalysis")"> <img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("AddMicroAnalysis","MicroAnalysis")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                        <span class="fa fa-plus"></span> Micro Analysis
                                    </a>
                                </div>
                            </div>
                            <table id="tblMicroAnalysis" class="table table-striped table-bordered hover table-sm table-responsive-md" width="100%" style="table-layout: fixed;">
                                <thead>
                                    <tr>

                                        @*<th>@Html.DisplayName("Sr No.")</th>*@
                                        <th>@Html.DisplayName("Date")</th>
                                        <th>@Html.DisplayName("Source")</th>
                                        <th>@Html.DisplayName("WO/PO")</th>
                                        <th>@Html.DisplayName("Product Name")</th>
                                        <th>@Html.DisplayName("Batch No")</th>
                                        <th>@Html.DisplayName("Packing Size")</th>
                                        <th>@Html.DisplayName("Best Before")</th>
                                       @* <th>@Html.DisplayName("Clostridium Perfringens(/100gm)")</th>*@
                                        @*<th>@Html.DisplayName("Escherichia Coli (/gm)")</th>*@
                                        @*<th>@Html.DisplayName("Salmonella(/25gm0) L= ABSENT")</th>*@
                                        @*<th>@Html.DisplayName("Total Plate Count (cfu/gm) L=1 x 10³")</th>*@
                                        @*<th>@Html.DisplayName("Yeast & Mould(cfu/gm) L=1 x 10^2")</th>*@
                                        @*<th>@Html.DisplayName("Coliform (cfu/gm)")</th>*@
                                        <th>@Html.DisplayName("Verify By Name")</th>
                                        <th>@Html.DisplayName("Action")</th>

                                    </tr>
                                </thead>
                                <tbody class="text-center"></tbody>
                            </table>
                            @*</div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@Html.Raw(TempData["Success"])


