@model IEnumerable<InVanWebApp_BO.OutwardNoteBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Gate Pass</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Gate Pass</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Gate Pass</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddOutwardNote","OutwardNote")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Gate Pass
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblIssueNote">
                                    <thead>
                                        <tr>
                                            <th>@Html.Label("Gate Pass Number")</th>
                                            <th>@Html.Label("Genrated Date")</th>
                                            <th>@Html.Label("Location")</th>
                                            <th>@Html.Label("Verified By")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.OutwardNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.OutwardDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.LocationName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.VerifiedByName)</td>
                                                <td>
                                                    <a href=@Url.Action("ViewOutwardNote", "OutwardNote", new { ID = item.ID}) title="View Gate-Pass">
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a>&emsp;
                                                    <a href=@Url.Action("EditOutwardNote", "OutwardNote", new { ID = item.ID}) title="Edit Gate-Pass">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a>&emsp;
                                                    <a href=@Url.Action("DeleteOutwardNote", "OutwardNote", new { ID = item.ID}) onclick="return confirm('Are you sure want to delete?');" title="Delete Gate-Pass">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@


    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblIssueNote').dataTable().fnDestroy();
            $('#tblIssueNote').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tblIssueNote').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}