@model IEnumerable<InVanWebApp_BO.POPaymentBO>
@{
    ViewBag.Title = "Purchase Order Payment";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<html>
<head>
    <title>PO Payment</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">PO Payment</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">PO Payment</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card">
                            <div class="card-body">
                               
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="@Url.Action("AddPOPayment","POPayment")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                            <span class="fa fa-plus"></span>  Add PO Payment
                                        </a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive" style="padding-top:15px;">
                                            <table class="table table-striped table-bordered" id="tblPOPayment">
                                                <thead>
                                                    <tr>
                                                        <th>PO Number</th>
                                                        <th>Vendor</th>
                                                        <th>Invoice No.</th>
                                                        <th>Invoice Amount</th>
                                                        <th>PO Total Amount</th>
                                                        <th>Paid Amount</th>
                                                        <th>Balance Pay</th>
                                                        <th>PaymentDate</th>
                                                        <th>Payment Mode</th>
                                                        <th>Payment Status</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(x => item.PONumber)</td>
                                                            <td>@Html.DisplayFor(x => item.VendorName)</td>
                                                            <td>@Html.DisplayFor(x => item.InvoiceNumber)</td>
                                                            <td>@Html.DisplayFor(x => item.PaymentAmount)</td>
                                                            <td>@Html.DisplayFor(x => item.TotalPOAmount)</td>
                                                            <td>@Html.DisplayFor(x => item.TotalPaybleAmount)</td>
                                                            <td>@Html.DisplayFor(x => item.BalanceAmount)</td>
                                                            <td>@Html.DisplayFor(x => item.PaymentDate)</td>
                                                            <td>@Html.DisplayFor(x => item.PaymentMode)</td>
                                                            <td>@Html.DisplayFor(x => item.IsPaid)</td>
                                                            <td>
                                                                <a href=@Url.Action("EditPOPayment", "POPayment", new { ID = item.ID })>
                                                                        <i class="fa fa-edit text-primary"></i>
                                                                    </a> &nbsp;
                                                                <a href=@Url.Action("DeletePOPayment", "POPayment", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');">
                                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@Html.Raw(TempData["Success"])

