@model IEnumerable<InVanWebApp_BO.PostProductionRejectionNoteBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<html>
<head>
    <title>Post-Production RN</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Post-Production RN</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Production</a>
                    </li>
                    <li class="breadcrumb-item active">Post-Production RN</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddPostProductionRejectionNote","PostProductionRejectionNote")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Post-Production RN
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tbl_PO">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Document Date")</th>
                                            <th>@Html.DisplayName("Document Number")</th>
                                            <th>@Html.DisplayName("Rejection Type")</th>
                                            <th>@Html.DisplayName("Batch Number")</th>
                                            <th>@Html.DisplayName("Work-Order Number")</th>
                                            <th>@Html.DisplayName("Sales-Order Number")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.PostProdRejectionNoteNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PostProdRejectionNoteDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.PostProdRejectionType)</td>
                                                <td>@Html.DisplayFor(modelItem => item.BatchNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.WorkOrderNo)</td>
                                                <td>@Html.DisplayFor(modelItem => item.SO_No)</td>
                                                <td>
                                                    <a href=@Url.Action("ViewPostProdRN", new { ID = item.ID }) title="View Post-Production RN">
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a><span>&nbsp;&nbsp;</span>
                                                    @if (item.DraftFlag == true)
                                                    {
                                                        <a href=@Url.Action("EditPostProdRN", new { ID = item.ID }) title="Edit Post-Production RN">
                                                            <i class="fa fa-edit text-primary"></i>
                                                        </a><span>&nbsp;&nbsp;</span>
                                                    }
                                                    <a href=@Url.Action("DeletePostProdRN", new { ID = item.ID, }) onclick="return confirm('Are you sure, you want to delete?');" title="Delete Post-Production RN">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])


@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl_PO').dataTable().fnDestroy();
            $('#tbl_PO').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tbl_PO').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}
