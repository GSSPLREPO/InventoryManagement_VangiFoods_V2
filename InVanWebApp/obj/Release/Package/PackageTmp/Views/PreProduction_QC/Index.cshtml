@model IEnumerable<InVanWebApp_BO.PreProduction_QCBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Pre Production QC</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Pre Production QC</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">QC</a>
                    </li>
                    <li class="breadcrumb-item active">Pre Production QC</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Item Type", "AddItemType")</h1>*@
                            <a href="@Url.Action("AddPreProductionQC","PreProduction_QC")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Pre Production QC
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                @*<table class="table table-striped table-bordered" id="tblPreProduction_QC">*@
                                <table class="table table-striped table-bordered hover table-sm" id="tblPreProduction_QC">
                                    <thead>
                                        <tr>
                                            @*<th>@Html.Label("Pre Production QC Number")</th>*@
                                            <th>@Html.Label("QC Number")</th>
                                            <th>@Html.Label("QC Date")</th>
                                            <th>@Html.Label("Total Issued Quantity (Kg)")</th>
                                            <th>@Html.Label("Rejected Quantity (Kg)")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @*<td>@Html.DisplayFor(modelItem => item.QCNumber)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.QCNumber)</td>
                                                <td>@Html.DisplayFor(modelItem => item.QCDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.IssuedQuantity)</td>
                                                <td>@Html.DisplayFor(modelItem => item.RejectedQuantity)</td>
                                                <td>
                                                    <a href=@Url.Action("ViewPreProduction", "PreProduction_QC", new { ID = item.ID }) title="View Pre-Production QC">
                                                        <i class="fa fa-eye text-primary"></i>
                                                    </a>&emsp;
                                                 
                                                    <a href=@Url.Action("DeletePreProductionQC", "PreProduction_QC", new { ID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Pre-Production QC">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{
    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblPreProduction_QC').dataTable().fnDestroy();
            $('#tblPreProduction_QC').dataTable({
                "iDisplayLength": 10
            });
        });
        var table = $('#tblPreProduction_QC').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}
