                <div class="col-md-2">
                    @Html.Label("PH")
                    <span style="color:red">*</span>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Ph, new { @class = "form-control form-control-sm", maxlength = "8", @onkeypress = "return isNumberKey(event);" })
                    @Html.ValidationMessageFor(model => model.Ph, "", new { @class = "error mt-2 text-danger" })
                </div>
