@model IEnumerable<InVanWebApp_BO.ProductMasterBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Product</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Product</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Product</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddProductItems","ProductMaster")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Product
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblItem">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Product Code")</th>
                                            <th>@Html.DisplayName("Product Name")</th>
                                            <th>@Html.DisplayName("Description")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody style="overflow-wrap: anywhere;">
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            @*Rahul added 'td class="text-wrap"' 05-04-2023.*@
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.ProductCode)
                                            </td>
                                            @*Rahul added 'td class="text-wrap"' 05-04-2023.*@
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.ProductName)
                                            </td>
                                            <td class="text-wrap">
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                <a href=@Url.Action("EditProductItem", "ProductMaster", new { Product_ID = item.ProductID }) title="Edit Product Item">
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("DeleteProductItem", "ProductMaster", new { Product_ID = item.ProductID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Product Item">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])
@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
   
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblItem').dataTable().fnDestroy();
            $('#tblItem').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tblItem').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });

    </script>
}