@model IEnumerable<InVanWebApp_BO.RQCCPBO>
@{
    ViewBag.Title = "RQCCP";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>RQ CCP</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">RQ CCP</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        @*Rahul updated anchor tag text 'Master' to 'Transactions' 16-02-23.*@
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Productions</a>
                    </li>
                    <li class="breadcrumb-item active">RQ CCP</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddRQCCP","RQCCP")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> RQ CCP
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblRQCCP">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Date")</th>
                                            <th>@Html.DisplayName("Activity")</th>
                                            <th>@Html.DisplayName("Item Name")</th>
                                            <th>@Html.DisplayName("No of Batches")</th>
                                            <th>@Html.DisplayName("Batch Weight")</th>
                                            @*<th>@Html.DisplayName("Monitoring Parameter")</th>*@
                                            <th>@Html.DisplayName("Batch Release Time Of RQ")</th>
                                            @*<th>@Html.DisplayName("Mandatory Temperature")</th>*@
                                            @*<th>@Html.DisplayName("Frequency")</th>*@
                                            @*<th>@Html.DisplayName("Responsibility")</th>*@
                                            @*<th>@Html.DisplayName("Remarks")</th>*@
                                            <th>@Html.DisplayName("Verification")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Activity)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NoBatches)</td>
                                            <td>@Html.DisplayFor(modelItem => item.BatchWeight)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.MonitoringParameter)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.BatchReleaseTimeOfRQ)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.MandatoryTemp)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Frequency)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Responsibility)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Remarks)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.Verification)</td>
                                            <td>
                                                <a href=@Url.Action("EditRQCCP", "RQCCP", new { RQCCPID = item.RQCCPID })>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("DeleteRQCCP", "RQCCP", new { RQCCPID = item.RQCCPID }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])
