    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblRecipeItem').dataTable().fnDestroy();
            $('#tblRecipeItem').dataTable({
                //"aLengthMenu": [[25, 50, 75, -1], [25, 50, 75, "All"]],
                "iDisplayLength": 10
            });
        });

        var table = $('#tblRecipeItem').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
            // "searching": true,
