@model IEnumerable<InVanWebApp_BO.RecipeMasterBO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}


<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>

<html>
<head>
    <title>Item</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Recipe Master</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Recipe Master</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddRecipeItems","RecipeMater")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Recipe
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblRecipeItem">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayName("Product Name")</th>
                                            <th>@Html.DisplayName("Recipe Name")</th>
                                            <th>@Html.DisplayName("Description")</th>
                                            <th>@Html.DisplayName("Created Date")</th>
                                            <th>@Html.DisplayName("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody style="overflow-wrap: anywhere;">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RecipeName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                                </td>
                                                <td>
                                                    <a href=@Url.Action("EditRecipeItem", "RecipeMater", new { Recipe_ID = item.RecipeID }) title="Edit Recipe">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("DeleteRecipeItem", "RecipeMater", new { Recipe_ID = item.RecipeID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Recipe">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])
