@model IEnumerable<InVanWebApp_BO.RejectionNoteBO>

@{ ViewBag.Title = "Rejection Note";
                Layout = "~/Views/Shared/MainMaster.cshtml"; }

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<!DOCTYPE html>
<html>
<head>
    <title>Rejection Note</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Rejection Note</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        @*Rahul updated anchor tag text 'Master' to 'Transactions' 16-02-23.*@
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Transactions</a>
                    </li>
                    <li class="breadcrumb-item active">Rejection Note</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddRejectionNote","RejectionNote")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Rejection Note
                            </a>
                            <!--Removed class="table-responsive"-->
                            <div class="table-responsive" style="padding-top:15px;">
                                @*<table class="table table-striped table-bordered table-responsive" id="tblInward">*@
                                <table class="table table-striped table-bordered hover table-sm" id="tblInward">
                                    <thead>
                                        <tr>
                                            <th>@Html.Label("Rejection Date")</th>
                                            <th>@Html.Label("Rejection Number")</th>
                                            <th class="text-wrap">@Html.Label("Inward / Production Material Issue Note Number")</th>
                                            <th class="text-wrap">@Html.Label("Inward / Material Issue Quantity (Kg)")</th>
                                            <th>@Html.Label("Rejected Quantity (Kg)")</th>
                                            <th>@Html.Label("Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                            <tr>
                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.NoteDate)</td>
                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.RejectionNoteNo)</td>
                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.InwardNoteNumber)</td>     @*//Rahul updated 13-01-2023.*@
                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.InwardQuantity)</td>
                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.RejectedQuantity)</td>
                                <td class="text-wrap">
                                    <a href=@Url.Action("ViewRejectionNote", "RejectionNote", new { RejectionID = item.ID }) title="View Rejection Note">
                                        <i class="fa fa-eye text-primary"></i>
                                    </a>&emsp;

                                    <a href=@Url.Action("DeleteRejectionNote", "RejectionNote", new { RejectionID = item.ID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Rejection Note">
                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                    </a>

                                </td>
                            </tr>}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@Html.Raw(TempData["Success"])

@section scripts{
    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblInward').dataTable().fnDestroy();
            $('#tblInward').dataTable({
                "iDisplayLength": 10
            });
        });
        var table = $('#tblInward').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}
