                                                                    <label>@c.</label>
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.ItemName)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.ItemCode)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.ItemUnitPrice)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.CurrencyName)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.ItemUnit)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.TotalQuantity)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.InwardQuantity)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.RejectedQuantity)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.QuantityTookForSorting)
                                                                </td>
                                                                <td class=" text-sm">
                                                                    @Html.DisplayFor(x => item.WastageQuantityInPercentage)
                                                                </td>
                                                                <td class=" text-sm">
