@model InVanWebApp_BO.RejectionNoteBO

@{
    ViewBag.Title = "ViewRejectionNote";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rejection Note</title>
    <style>
        html2canvas-container {
            width: 3000px !important;
            height: 2000px !important;
        }
    </style>
</head>
<body>
    @Html.HiddenFor(model => model.ID)
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row" id="printV" width="1000px">
            <div class="col-md-12  grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <img class="align-self-center" src="~/Theme/MainContent/images/logo-mini.png" alt="client-logo" style="width:80px;height:50px;">
                            <!--&nbsp;&nbsp;&nbsp; //Rahul commented 30-12-2022.-->
                            <h3 class="card-title font-weight-bold col-4 mb-0 align-self-center" style="font-size: 16pt;">Rejection Note</h3>

                            <!--div class="row" style="margin-bottom: 1%;" //Rahul commented 30-12-2022.-->
                            <div class="col">
                                <div class="col-md-12">
                                    <!--Rahul removed style="margin-left: 1560%;" 30-12-2022. -->
                                    <img src="~/Theme/MainContent/images/ICON.png.png" id="btnExport" style="width:45px;height:45px" class=" float-right" />
                                </div>
                            </div>

                        </div>
                        <hr />

                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-2">
                                    <label class="font-weight-bold">Rejection Number</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DisplayFor(model => model.RejectionNoteNo)
                                </div>
                                <div class="col-md-2">
                                    <label class="font-weight-bold">Note Date</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DisplayFor(model => model.NoteDate) 
                                    @*@Html.TextBoxFor(model => model.NoteDate, "{0:yyyy-MM-dd}", new { style = "border:none; color:black; padding-top:1%; padding-left: 0.05%;font-size: 100%;", @readonly = "readonly" })*@
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    <label class="font-weight-bold">InwardQC Number</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DisplayFor(model => model.InwardQCNumber)
                                </div>

                                <div class="col-md-2">
                                    <label class="font-weight-bold">InwardNote Number</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DisplayFor(model => model.InwardNoteNumber)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    <label class="font-weight-bold">PO Number</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DisplayFor(model => model.PONumber)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    <label class="font-weight-bold">Supplier Details</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DisplayFor(model => model.SupplierName)
                                    @*@Html.TextBoxFor(model => model.SupplierName, new { style = "border:none; width:100%", @readonly = "readonly" })*@
                                </div>
                            </div>

                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <Center><h5 class="font-weight-bold">Item Details</h5></Center>
                                    <hr />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="table-sorter-wrapper col-lg-12 table-responsive">
                                            @*Rahul removed class table-striped and added class table-hover in table tag 09-02-2023.*@
                                            <table class="table table-hover" id="submissionTable" style="table-layout: auto;">
                                                <thead>
                                                    <tr>
                                                        <th class="sortStyle text-sm">
                                                            #
                                                        </th>
                                                        @*Rahul added class text-wrap in all th tag 09-02-23.*@
                                                        <th class="sortStyle text-sm text-wrap">
                                                            Item Description
                                                        </th>
                                                        <th class="sortStyle text-sm text-wrap">
                                                            Item Code
