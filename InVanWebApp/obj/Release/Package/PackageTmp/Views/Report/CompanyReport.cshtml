@model InVanWebApp_BO.CompanyBO
@{
    ViewBag.Title = "CompanyReport";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Company Report</title>
    @*<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />*@
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Company Report</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Reports</a>
                    </li>
                    <li class="breadcrumb-item active">Company Report</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div style="padding-top:15px;">

                                <div class="row">
                                    <div class="col-md-2">
                                        <label>Company Type:</label>

                                    </div>
                                    <div class="col-md-3">
                                        @*@Html.DropDownList("Item", (IEnumerable<SelectListItem>)ViewData["Item"], "--ALL--", new { @class = "form-control", @id = "ItemId", onchange = "SelectedIndexChangedItem()" })*@
                                        @Html.DropDownListFor(model => model.CompanyType, new List<SelectListItem>{
                                        new SelectListItem{ Text="All", Value = "All" },
                                        new SelectListItem{ Text="Buyer", Value = "Buyer" },
                                        new SelectListItem{ Text="Supplier", Value = "Supplier" },
                                        new SelectListItem{ Text="Both", Value = "Both" }
                                        }, new { @class = "form-control", onchange = "SelectedIndexChangedCompanyType()" })
                                        @Html.ValidationMessage("CompanyType", "", new { id = "CompanyTypeValidate", @class = "col-form-label error mt-2 text-danger" })
                                    </div>
                                    <div class="col-md-1">
                                        <button id="btnGo" type="button" value="Go" name="Go" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);">Go</button>
                                    </div>
                                    <div class="col-md-6 left">
                                        <a id="ExportPdf"style="float:right;" href="@Url.Action("ExprotAsPDFForCompany", "Report")"> <img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                        <a id="ExportExcel"style="float:right;" href="@Url.Action("ExportAsExcelForCompany", "Report")"> <img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                    </div>
                                </div>

                                <br />
                                <div style="margin-top:25px;">
                                    <table class="ui celled table table-striped table-bordered hover table-sm display nowrap" id="tblCompanyType" style="width:100%">
                                        <thead>
                                            <tr>

                                                <th style="text-align:center">Type</th>
                                                <th style="text-align:center">Name</th>
                                                <th style="text-align:center">Contact Person</th>
                                                <th style="text-align:center">Contact No</th>
                                                <th style="text-align:center">Email Id</th>
                                                <th style="text-align:center">Address</th>
                                                <th style="text-align:center">Remarks</th>
                                                
                                              
                                            </tr>
                                        </thead>
                                        <tbody class="text-center"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@Html.Raw(TempData["Success"])

