    <script type="text/javascript">
        $(document).ready(function () {
            BindCompany();
        });
        function OnChangedFromDate() {
            $('#fromDateValidate').hide();
        }

        function OnChangedToDate() {
            $('#toDateValidate').hide();
        }

        function BindCompany() {
            
            $('#tblCompanyType').dataTable().fnDestroy();
            var t = $('#tblCompanyType').dataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "pageLength": 10,
                "sAjaxSource": "/Report/getCompanyDataByType?CompanyType=All",
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    flag = parseFloat(result.length);

                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "scrollX": true,
                "columns": [
                   
                    { "data": "CompanyType", "autoWidth": true },
                    { "data": "CompanyName", "autoWidth": true },
                    { "data": "ContactPersonName", "autoWidth": true },
                    { "data": "ContactPersonNo", "autoWidth": true },
                    { "data": "EmailId", "autoWidth": true },
                    { "data": "Address", "autoWidth": true },
                    { "data": "Remarks", "autoWidth": true }
                 
                   
                ]


            });
           
        }

        $("#btnGo").on("click", function () {
            
            $('#ExportPdf').show();
            $('#ExportExcel').show();
            var CompanyType = $('#CompanyType').val();
            $('#tblCompanyType').dataTable().fnDestroy();
            var t = $('#tblCompanyType').dataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "pageLength": 10,
                /*"sAjaxSource": "/DailyMonitoring/GetAllDailyMonitoringList?fromDate=" + fromDate + "&toDate=" + toDate,*/
                "sAjaxSource": "/Report/getCompanyDataByType?CompanyType=" + CompanyType,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    var flag = parseFloat(result.length);
                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "scrollX": true,
                "columns": [
                  
                    { "data": "CompanyType", "autoWidth": true },
                    { "data": "CompanyName", "autoWidth": true },
                    { "data": "ContactPersonName", "autoWidth": true },
                    { "data": "ContactPersonNo", "autoWidth": true },
                    { "data": "EmailId", "autoWidth": true },
