@model InVanWebApp_BO.InwardQCBO
@{
    ViewBag.Title = "WastageReport";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Wastage Report</title>
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Wastage Report</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Reports</a>
                    </li>
                    <li class="breadcrumb-item active">Wastage Report</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div style="padding-top:15px;">

                                <div class="row">
                                    <div class="col-md-2">
                                        <label>From Date:</label>
                                        <span style="color:red">*</span>
                                    </div>
                                    <div class="col-md-3">                                        
                                        @Html.TextBoxFor(model => model.fromDate, "{0:yyyy-MM-dd}", new { @id = "fromDate", @class = "datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedFromDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                        @Html.ValidationMessageFor(model => model.fromDate, "", new { id = "fromDateValidate", @class = "col-form-label error mt-2 text-danger" })                                        
                                    </div>
                                    <div class="col-md-2">
                                        <label>To Date:</label>
                                        <span style="color:red">*</span>
                                    </div>
                                    <div class="col-md-3">                                        
                                        @Html.TextBoxFor(model => model.toDate, "{0:yyyy-MM-dd}", new { @id = "toDate", @class = " datepicker form-control form-control-sm", @type = "date", onchange = "OnChangedToDate()", @max = DateTime.Now.ToString("yyyy-MM-dd") })
                                        @Html.ValidationMessageFor(model => model.toDate, "", new { id = "toDateValidate", @class = "col-form-label error mt-2 text-danger" })                                        
                                    </div>
                                    <div class="col-md-2">
                                        <button id="btnGo" type="button" value="Go" name="Go" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);">Go</button>
                                        <a id="ExportPdf" href="@Url.Action("ExprotAsPDFForWastageReport", "Report")"> <img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                        <a id="ExportExcel" href="@Url.Action("ExportAsExcelForWastageReport", "Report")"> <img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px" /> </a>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-2 ms-1">
                                        <label>PO Number:</label>
                                        <span style="color:red">*</span>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DropDownList("PONumber", (IEnumerable<SelectListItem>)ViewData["PONumberdd"], "--Select--", new { @class = "form-control", @id = "PONumberId", onchange = "SelectedIndexChangedItem()" })
                                        @Html.ValidationMessage("PONumber", "", new { id = "PONumberValidate", @class = "col-form-label error mt-2 text-danger" })
                                    </div>

                                    @*<div class="col-md-2">
                                            <label>Wearhouse Location:</label>
                                            <span style="color:red">*</span>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.DropDownList("Wearhouse", (IEnumerable<SelectListItem>)ViewData["WearhouseLocation"], "--Select--", new { @class = "form-control", @id = "Wearhouse", onchange = "SelectedIndexChangedWearhouse()" })
                                            @Html.ValidationMessage("Wearhouse", "", new { id = "WearhouseValidate", @class = "col-form-label error mt-2 text-danger" })
                                        </div>*@

                                </div>
                                <br />
                                <div style="margin-top:25px;">
                                    <table class="ui celled table table-striped table-bordered hover table-sm display nowrap" id="tblWastageReport" style="width: 100%;" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center" class="text-wrap">Sr.No.</th>
                                                <th style="text-align:center">Date</th>
                                                <th style="text-align:center" class="text-wrap">PO Number</th>
                                                <th style="text-align:center" class="text-wrap">Inward Number</th>
                                                <th style="text-align:center" class="text-wrap">Inward QC Number</th>
                                                <th style="text-align:center" class="text-wrap">Supplier Name</th>
                                                <th style="text-align:center" class="text-wrap">Item Name</th>
                                                <th style="text-align:center" class="text-wrap">Item Code</th>
                                                <th style="text-align:center" class="text-wrap">Item Unit Price (Rs)</th>
                                                <th style="text-align:center" class="text-wrap">Inward Quantity (KG)</th>
                                                <th style="text-align:center" class="text-wrap">Received Quantity (KG)</th>
                                                <th style="text-align:center" class="text-wrap">Balance Quantity (KG)</th>
                                                <th style="text-align:center" class="text-wrap">Rejected Quantity (KG)</th>
                                                <th style="text-align:center" class="text-wrap">Wastage Quantity (%)</th>
                                                <th style="text-align:center" class="text-wrap">Reason For Wastage</th>
                                                <th style="text-align:center" class="text-wrap">Approved By</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-center"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    @*<script src="~/DataTables-1.10.18/js/jquery.dataTables.min.js"></script>
        <link href="~/DataTables-1.10.18/css/jquery.dataTables.min.css" rel="stylesheet" />*@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">

        $(document).ready(function () {
            $('#ExportPdf').hide();
            $('#ExportExcel').hide();
            $('#tblWastageReport').hide();
        });

        //function SelectedIndexChangedWearhouse() {
        //    $('#WearhouseValidate').hide();
        //}

        function SelectedIndexChangedItem() {
            $('#ItemValidate').hide();
        }

        function OnChangedFromDate() {
            $('#fromDateValidate').hide();
        }

        function OnChangedToDate() {
            $('#toDateValidate').hide();
        }

        $("#btnGo").on('click', function () {

            var fromDate = $("#fromDate").val();
            var toDate = $("#toDate").val();

            if (fromDate == null || fromDate == "") {
                $('#fromDateValidate').text('Select from date!');
                $('#fromDateValidate').show();
                $("#fromDate").focus();
                return;
            }

            if (toDate == null || toDate == "") {
                $('#toDateValidate').text('Select to date!');
                $('#toDateValidate').show();
                $("#toDate").focus();
                return;
            }

            if (fromDate > toDate) {
                alert('To date is greater than from date!');
                $('#fromDate').focus();
                return;
            }


            var CheckItem = $('#PONumberId').val();
            if (CheckItem == '' || CheckItem == null) {
                CheckItem = 0;
            }

            $('#ExportPdf').show();
            $('#ExportExcel').show();
            $('#tblWastageReport').show();
            var flag = 0;
            $('#tblWastageReport').dataTable().fnDestroy();
            var t = $('#tblWastageReport').DataTable({
                //"processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "sAjaxSource": "/Report/GetWastageReportData?fromDate=" + fromDate + "&toDate=" + toDate + "&ItemId=" + CheckItem,//+ "&LocationId=" + warehouse,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    flag = parseFloat(result.length);

                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "pageLength": 10,
                "scrollX": true,
                "columns": [
                    { "data": "SrNo", "autoWidth": true },
                    { "data": "InwardQCDate", "autoWidth": true },
                    { "data": "PONumber", "autoWidth": true },
                    { "data": "InwardNumber", "autoWidth": true },
                    { "data": "InwardQCNumber", "autoWidth": true },
                    { "data": "SupplierName", "autoWidth": true },
                    { "data": "Item_Name", "autoWidth": true },
                    { "data": "Item_Code", "autoWidth": true },
                    { "data": "ItemUnitPrice", "autoWidth": true },
                    { "data": "InwardQuantity", "autoWidth": true },
                    { "data": "QuantityTookForSorting", "autoWidth": true },
                    { "data": "BalanceQuantity", "autoWidth": true },
                    { "data": "RejectedQuantity", "autoWidth": true },
                    { "data": "WastageQuantityInPercentage", "autoWidth": true },
                    { "data": "ReasonForWastage", "autoWidth": true },
                    { "data": "ApprovedBy", "autoWidth": true }
                ]
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();

        });

    </script>
}

<style>
    td {
        white-space: break-spaces !important;
    }
</style>
