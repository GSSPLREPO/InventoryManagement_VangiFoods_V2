@model IEnumerable<InVanWebApp_BO.RoleBO>
@{
    ViewBag.Title = "Role Master";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Roles</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Roles</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        @*Rahul updated anchor tag text 'Master' to 'Security' 16-02-23.*@
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Security</a>
                    </li>
                    <li class="breadcrumb-item active">Roles</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Role", "AddRole")</h1>*@
                            <a href="@Url.Action("AddRole","Role")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Role
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblItem">
                                    <thead>
                                        <tr>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.UnitName)*@
                                                @Html.DisplayName("Role")
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Description)*@
                                                @Html.DisplayName("Description")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Actions")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody style="overflow-wrap: anywhere;">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RoleName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    <a href=@Url.Action("EditRole", "Role", new { RoleId = item.RoleId }) title="Edit Role">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a> &emsp;
                                                    <a href=@Url.Action("DeleteRole", "Role", new { RoleId = item.RoleId }) onclick="return confirm('Are you sure want to delete?');" title="Delete Role">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                    @*@Html.ActionLink("Edit", "EditRole", new { RoleId = item.RoleId }) |*@
                                                    @*@Html.ActionLink("Delete", "DeleteRole", new { RoleId = item.RoleId, },
                    new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])
