
@{
    ViewBag.Title = "Sales Order Payment";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}


<div class="card">
    <div class="card-body">
        <h4>Add Sales Order Payment</h4>
        <hr />
        <div class="row">
            <div class="col-md-2">
                @Html.Label("SO Number")
                <span style="color:red">*</span>
            </div>
            <div class="col-md-4">
                @Html.DropDownList("SONumber", new SelectList((System.Collections.IEnumerable)ViewData["SONo"], "Value", "Text"), "-- Select Sales Number -- ", new { @class = "form-control" })
                <span id="ddValidPONumber" class="error mt-2 text-danger"></span>
            </div>
            <div id="rData"></div>
        </div>
            <a href="@Url.Action("Index", "SOPayment")" id="btnBackBtn" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b); float: right;">
                Back To List
            </a>
    </div>
</div>

@Html.Raw(TempData["Success"])

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>

<script type="text/javascript">
    
    $('#SONumber').change(function () {
        debugger;
        var Id = $('#SONumber option:selected').attr('value');
        $('#btnBackBtn').hide();
        var url = '';
        if (Id > 0) {
            url = "/SOPayment/SalesOrderDetails?salesOrderId=" + Id;
            $.get(url, function (data) {
                $("#rData").html(data);
            });
        }
        else {
            $('#dvPaymentDetails').hide();
        }
    });

</script>



