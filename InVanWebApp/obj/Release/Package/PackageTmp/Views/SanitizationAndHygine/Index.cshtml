                                </div>
                                <div class="col-md-2">
                                    <a href="@Url.Action("AddSanitizationAndHygine","SanitizationAndHygine")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; margin-top: 10%; background: linear-gradient(85deg, #392c70, #6a005b); ">
                                        <span class="fa fa-plus"></span> Sanitization And Hygiene 
                                    </a>
                                </div>
                            </div>
                            <table id="SanitizationAndHyginedt" class="table table-striped table-bordered hover table-sm table-responsive-md" width="100%" style="table-layout: fixed;">
                                <thead>
                                    <tr style="border:medium">
                                        <th>@Html.DisplayName("Name of Empolyee")</th>
                                        <th>@Html.DisplayName("Department")</th>
                                        <th>@Html.DisplayName("Body Temprature")</th>
                                        <th>@Html.DisplayName("Hand Wash")</th>
                                        <th>@Html.DisplayName("Any Cuts & Wounds")</th>
                                        <th>@Html.DisplayName("Fully Coverd Hair")</th>
                                        <th>@Html.DisplayName("Verify By Name")</th>
                                        <th>@Html.DisplayName("Actions")</th>

                                    </tr>
                                </thead>
                                <tbody class="text-center"></tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

