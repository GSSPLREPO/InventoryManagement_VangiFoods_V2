@model InVanWebApp_BO.StockMasterBO
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Inward Note</title>
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stock Report</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Reports</a>
                    </li>
                    <li class="breadcrumb-item active">Stock Report</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-1">
                                    <label>Items</label>
                                </div>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(model => model.ItemID, (IEnumerable<SelectListItem>)ViewData["Item"], "--All--", new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    <button id="btnGo" class="btn btn-sm btn-primary" style="background: linear-gradient(85deg, #392c70, #6a005b);float:left;">Go</button>
                                </div>
                            </div>
                            <div class="col-md-12 mb-2" style="float:left;padding-left:89.3%;">
                                <a id="ExportPdf" style="font-size: 50px;" href="@Url.Action("ExprotAsPDF", "StockReport")"><img src="~/Theme/MainContent/images/ICON.png.png" style="width:45px;height:45px;padding-top:1px" /></a>
                                <a id="ExportExcel" style="font-size: 50px;" href="@Url.Action("ExportAsExcel", "StockReport")"><img src="~/Theme/MainContent/images/Excel_Icon_04.png" style="width:45px;height:45px;padding-top:1px;" /></a>
                            </div>
                            <br />


                            <table id="tblStockReport" class="ui celled table table-striped table-bordered hover table-sm">
                                <thead class="text-center" style="text-align:center">
                                    <tr>
                                        @*<th>ID</th>*@
                                        <th style="text-align:center">Sr. No.</th>
                                        <th style="text-align:center">Item Code</th>
                                        <th style="text-align:center">Item Name</th>
                                        <th style="text-align:center">Category</th>
                                        <th style="text-align:center">Item Unit Price (Rs)</th>
                                        <th style="text-align:center">Stock Quantity (KG)</th>
                                        <th style="text-align:center">Item Unit</th>
                                        <th style="text-align:center">Inventory Value (Rs)</th>
                                        <th style="text-align:center">Reorder</th>
                                        <th style="text-align:center">Reorder Level (KG)</th>
                                        <th style="text-align:center">Item Reorder Quantity (KG)</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts{
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            BindStockReport();
        });

        function BindStockReport() {
            $('#tblStockReport').dataTable().fnDestroy();
            var t = $('#tblStockReport').DataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "sAjaxSource": "/StockReport/GetStock",
                "pageLength": 20,
                "scrollX": true,
                "columns": [
                    /* { "data": "ID", "autoWidth": true },*/
                    { "data": "ID", "autoWidth": true },
                    { "data": "Item_Code", "autoWidth": true },
                    { "data": "ItemName", "autoWidth": true },
                    { "data": "ItemCategory", "autoWidth": true },
                    { "data": "ItemUnitPrice", "autoWidth": true },
                    { "data": "StockQuantity", "autoWidth": true },
                    { "data": "ItemUnit", "autoWidth": true },
                    { "data": "InventoryValue", "autoWidth": true },
                    { "data": "Reorder", "autoWidth": true },
                    { "data": "ReOrderLevel", "autoWidth": true },
                    { "data": "ItemReOrderQuantity", "autoWidth": true },
                ]
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();
        }

        $("#btnGo").on("click", function () {
            var ItemId = $('#ItemID').val();
            if (ItemId == '' || ItemId == null)
                ItemId = 0;

            $('#tblStockReport').dataTable().fnDestroy();
            var t = $('#tblStockReport').DataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "sAjaxSource": "/StockReport/GetStock?id=" + ItemId,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    var flag = parseFloat(result.length);

                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "pageLength": 20,
                "scrollX": true,
                "columns": [
                    /* { "data": "ID", "autoWidth": true },*/
                    { "data": "ID", "autoWidth": true },
                    { "data": "Item_Code", "autoWidth": true },
                    { "data": "ItemName", "autoWidth": true },
                    { "data": "ItemCategory", "autoWidth": true },
                    { "data": "ItemUnitPrice", "autoWidth": true },
                    { "data": "StockQuantity", "autoWidth": true },
                    { "data": "ItemUnit", "autoWidth": true },
                    { "data": "InventoryValue", "autoWidth": true },
                    { "data": "Reorder", "autoWidth": true },
                    { "data": "ReOrderLevel", "autoWidth": true },
                    { "data": "ItemReOrderQuantity", "autoWidth": true },
                ]
            });
            t.on('order.dt search.dt', function () {
                let i = 1;

                t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();
        });

    </script>
    }
