
@model IEnumerable<InVanWebApp_BO.StockTransferBO>
@{
    ViewBag.Title = "Stock Transfer";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}


<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<html>
<head>
    <title>Stock Transfer</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Stock Transfer</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Inventory</a>
                    </li>
                    <li class="breadcrumb-item active">Stock Transfer</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <a href="@Url.Action("AddStockTransfer","StockTransfer")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Stock Transfer
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered" id="tbl_StockTransfer">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Item Code")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Item Name")
                                            </th>
                                            @*Rahul added class and style 08-02-23.*@
                                            <th class="text-wrap" style="width: 90px;">
                                                @Html.DisplayName("Transfer Date-time")
                                            </th>
                                            @*Rahul added class and style 08-02-23.*@
                                            <th class="text-wrap" style="width: 90px;">
                                                @Html.DisplayName("Inward Date-time Of Item")
                                            </th>
                                            <th>
                                                @Html.DisplayName("From Location")
                                            </th>
                                            @*Rahul added class and style 08-02-23.*@
                                            <th class="text-wrap" style="width: 90px;">
                                                @Html.DisplayName("From Location Before Transfer Quantity")
                                            </th>
                                            @*Rahul added class and style 08-02-23.*@
                                            <th class="text-wrap" style="width: 90px;">
                                                @Html.DisplayName("Transfer Quantity")
                                            </th>
                                            <th>
                                                @Html.DisplayName("To Location")
                                            </th>
                                            @*Rahul added class and style 08-02-23.*@
                                            <th class="text-wrap" style="width: 90px;">
                                                @Html.DisplayName("To Location Final Quantity")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Item_Code)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Item_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.InwardDateOfItem)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FromLocationName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FromLocation_BeforeTransferQty)
                                                    KG
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TransferQuantity)
                                                    KG
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ToLocationName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FinalQuantity)
                                                    KG
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
@Html.Raw(TempData["Success"])

@section scripts{
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl_StockTransfer').dataTable().fnDestroy();
            $('#tbl_StockTransfer').dataTable({
                "iDisplayLength": 10
            });
        });

        var table = $('#tbl_StockTransfer').dataTable({
            "serverSide": false,
            "filter": true,
            "pageLength": 20
        });
    </script>
}