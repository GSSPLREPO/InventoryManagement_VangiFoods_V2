@model IEnumerable<InVanWebApp_BO.TaxBO>
@{
    ViewBag.Title = "Tax";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Tax</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Tax</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Tax</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Tax", "AddTax")</h1>*@
                            <a href="@Url.Action("AddTax","Tax")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Tax
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered" style="table-layout:fixed;">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Tax Name")
                                        </th>
                                         <th>
                                            @Html.DisplayName("Tax Value")
                                        </th>
                                        @*<th>
                                            @Html.DisplayName("Description")
                                        </th>*@
                                        <th>
                                            @Html.DisplayName("Edit/Delete")
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TaxName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TaxValue)
                                            </td>
                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>*@
                                            <td>
                                                <a href=@Url.Action("EditTax", "Tax", new { Id = item.Id })>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("DeleteTax", "Tax", new { ID = item.Id }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                                @*@Html.ActionLink("Edit", "EditTax", new { Id = item.Id }) |
                                                @Html.ActionLink("Delete", "DeleteTax", new { ID = item.Id, },
                                                    new { onclick = "return confirm('Are you sure, you wants to delete?');" })*@
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])