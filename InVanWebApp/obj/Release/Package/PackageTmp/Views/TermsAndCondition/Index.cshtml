@model IEnumerable<InVanWebApp_BO.TermsAndConditionMasterBO>
@{
    ViewBag.Title = "TermsAndCondition";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <title>Tax</title>
</head>
<body>

    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Terms and Condition</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("ReorderPointOfStocks","Dashb_RTWarehouseWiseStock")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Terms and Condition</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Tax", "AddTax")</h1>*@
                            <a href="@Url.Action("AddTerms","TermsAndCondition")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span> Terms
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered hover table-sm" id="tblItem">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Sr No")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Term Name")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Description")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Actions")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.SrNo)</td>
                                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.TermName)</td>
                                                <td class="text-wrap">@Html.DisplayFor(modelItem => item.TermDescription)</td>
                                                <td class="text-wrap">
                                                    <a href=@Url.Action("EditTerms", "TermsAndCondition", new { ID = item.TermsConditionID }) title="Edit Terms">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a>
                                                    <a href=@Url.Action("DeleteTerms", "TermsAndCondition", new { ID = item.TermsConditionID }) onclick="return confirm('Are you sure want to delete?');" title="Delete Terms">
                                                        <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
@Html.Raw(TempData["Success"])

