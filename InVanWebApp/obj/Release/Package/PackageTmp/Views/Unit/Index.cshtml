@model IEnumerable<InVanWebApp.DAL.UnitMaster>
@{
    ViewBag.Title = "Unit Master";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Unit Master</title>
</head>
<body>
    <div style="margin-top: -18px; margin-left: -20px; background: white;">
        <ul class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="@Url.Action("Index","Dashboard")">Master</a></li>
            <li class="active">/Unit Master</li>
        </ul>
    </div>
    <div class="box box-primary; panel-body" runat="server" id="divPanel1" style="margin-top: -10px;
    margin-left: -20px;">
        <div class="box-header">
            <h4 class="box-title" style="margin-left: -850px;">Unit Master</h4>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.ActionLink("Add Unit", "AddUnit")
                            <table class="table">
                                <tr>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.UnitName)*@
                                        @Html.DisplayName("Unit")
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.UnitCode)*@
                                        @Html.DisplayName("Unit Code")
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.Description)*@
                                        @Html.DisplayName("Description")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Edit/Delete")
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditUnit", new { UnitID = item.UnitID }) |
                                            @Html.ActionLink("Delete", "DeleteUnit", new { UnitId = item.UnitID })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>