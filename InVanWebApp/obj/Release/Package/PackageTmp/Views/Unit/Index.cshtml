@model IEnumerable<InVanWebApp_BO.UnitMaster>
@{
    ViewBag.Title = "Unit Master";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Unit Master</title>
</head>
<body>
    <div class="content-wrapper" runat="server" id="divPanel1">
        <div class="page-header" style="height:5px;">
            <h4 class="page-title">Unit Master</h4>
            <nav aria-label="breadcrum">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Dashboard")">Master</a>
                    </li>
                    <li class="breadcrumb-item active">Unit</li>
                </ol>
            </nav>
        </div>
        <hr />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @*<h1 class="card-title">@Html.ActionLink("Add Unit", "AddUnit")</h1>*@
                            <a href="@Url.Action("AddUnit","Unit")" class="btn btn-sm btn-primary" style="float: right; background: linear-gradient(85deg, #392c70, #6a005b);">
                                <span class="fa fa-plus"></span>  Add Unit
                            </a>
                            <div class="table-responsive" style="padding-top:15px;">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th>@Html.DisplayName("Unit")</th>
                                        <th>@Html.DisplayName("Unit Code")</th>
                                        <th>@Html.DisplayName("Description")</th>
                                        <th>@Html.DisplayName("Edit/Delete")</th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-wrap">@Html.DisplayFor(modelItem => item.UnitName)</td>
                                            <td class="text-wrap">@Html.DisplayFor(modelItem => item.UnitCode)</td>
                                            <td class="text-wrap">@Html.DisplayFor(modelItem => item.Description)</td>
                                            <td class="text-wrap">
                                                <a href=@Url.Action("EditUnit", "Unit", new { UnitID = item.UnitID})>
                                                    <i class="fa fa-edit text-primary"></i>
                                                </a> &emsp;
                                                <a href=@Url.Action("DeleteUnit", "Unit", new { UnitId = item.UnitID }) onclick="return confirm('Are you sure want to delete?');">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:tomato"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

</html>
@Html.Raw(TempData["Success"])