    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">


    <script type="text/javascript">
        $(document).ready(function () {
            BindVegDosageLog();
            setCurrentDate();
        });

        function setCurrentDate() {
            var now = new Date();
            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);
            var today = now.getFullYear() + "-" + (month) + "-" + (day);
            $('#fromDate').val(today);
            $('#toDate').val(today);
        }

        function OnChangedFromDate() {
            $('#fromDateValidate').hide();
        }

        function OnChangedToDate() {
            $('#toDateValidate').hide();
        }


        function BindVegDosageLog() {
            var flagdate = 1;
            $('#VegWasherDosageLogdt').dataTable().fnDestroy();
            var t = $('#VegWasherDosageLogdt').dataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "pageLength": 10,
                "sAjaxSource": "/VegWasherDosageLog/GetAllVegDoserLogList?flagdate=" + flagdate,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    flag = parseFloat(result.length);

                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "scrollX": true,
                "columns": [
                   /* { "data": "Date", "autoWidth": true },*/
                    {
                        "data": "Date",
                        "autoWidth": true,
                        "render": function (value) {
                            var dateString = value.substr(6);
                            var currentTime = new Date(parseInt(dateString));
                            var month = currentTime.getMonth() + 1;
                            var monthString = month > 9 ? month : '0' + month;
                            var day = currentTime.getDate();
                            var dayString = day > 9 ? day : '0' + day;
                            var year = currentTime.getFullYear();
                            //var hours = currentTime.getHours();
                            //var minutes = currentTime.getMinutes();
                            //var seconds = currentTime.getSeconds();
                            var date = dayString + "/" + monthString + "/" + year;
                            return date;
                        }

                    },

                    { "data": "VegWasher1SolutionAMl", "autoWidth": true },
                    { "data": "VegWasher1SolutionBMl", "autoWidth": true },
                    { "data": "NameOfItem1", "autoWidth": true },
                    { "data": "VegWasher2SolutionAMl", "autoWidth": true },
                    { "data": "VegWasher2SolutionBMl", "autoWidth": true },
                    { "data": "NameOfItem2", "autoWidth": true },
                    { "data": "VerifyByName", "autoWidth": true },

                    {
                        data: "Id", "render": function (data) {
                            return '<button type="button" id="' + data + '" class = "text-primary btnEdit"  style="background:transparent !important;" title = "Edit Veg-Washer Dosage Log"><i class="fa fa-edit"/></i></button> <button type="button" id="'
                                + data + '" class = "text-danger btnDelete"  style="background:transparent !important;" title = "Delete Veg-Washer Dosage Log"><i class="fa fa-trash"/></i></button>'
                        }
                    }
                ]


            });
        }

        $("#btnGo").on("click", function () {
            var fromDate = $("#fromDate").val();
            var toDate = $("#toDate").val();
            var flagdate = 2;

            if (fromDate == null || fromDate == "") {
                $('#fromDateValidate').text('Select from date!');
                $('#fromDateValidate').show();
                $("#fromDate").focus();
                return;
            }

            if (toDate == null || toDate == "") {
                $('#toDateValidate').text('Select to date!');
                $('#toDateValidate').show();
                $("#toDate").focus();
                return;
            }

            if (fromDate > toDate) {
                alert('Invalid date selection!');
                $('#fromDate').focus();
                return;
            }
            $('#ExportPdf').show();
            $('#ExportExcel').show();

            $('#VegWasherDosageLogdt').dataTable().fnDestroy();
            var t = $('#VegWasherDosageLogdt').dataTable({
                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "pageLength": 10,
                /*"sAjaxSource": "/MicroAnalysis/GetAllMicroAnalysisList?fromDate=" + fromDate + "&toDate=" + toDate,*/
                "sAjaxSource": "/VegWasherDosageLog/GetAllVegDoserLogList?flagdate=" + flagdate + "&fromDate=" + fromDate + "&toDate=" + toDate,
                "initComplete": function (settings, json) {
                    var result = JSON.stringify(json);
                    var flag = parseFloat(result.length);
                    if (flag > 11) {
                        $('#ExportPdf').show();
                        $('#ExportExcel').show();
                    }
                    else {
                        $('#ExportPdf').hide();
                        $('#ExportExcel').hide();
                    }
                },
                "scrollX": true,
                "columns": [
                    {
                        "data": "Date",
                        "autoWidth": true,
                        "render": function (value) {
                            var dateString = value.substr(6);
                            var currentTime = new Date(parseInt(dateString));
                            var month = currentTime.getMonth() + 1;
                            var monthString = month > 9 ? month : '0' + month;
                            var day = currentTime.getDate();
                            var dayString = day > 9 ? day : '0' + day;
                            var year = currentTime.getFullYear();
                            //var hours = currentTime.getHours();
                            //var minutes = currentTime.getMinutes();
                            //var seconds = currentTime.getSeconds();
                            var date = dayString + "/" + monthString + "/" + year;
                            return date;
                        }

                    },
                    { "data": "VegWasher1SolutionAMl", "autoWidth": true },
                    { "data": "VegWasher1SolutionBMl", "autoWidth": true },
                    { "data": "NameOfItem1", "autoWidth": true },
                    { "data": "VegWasher2SolutionAMl", "autoWidth": true },
                    { "data": "VegWasher2SolutionBMl", "autoWidth": true },
                    { "data": "NameOfItem2", "autoWidth": true },
                    { "data": "VerifyByName", "autoWidth": true },

                    {
                        data: "Id", "render": function (data) {
                            return '<button type="button" id="' + data + '" class = "text-primary btnEdit"  style="background:transparent !important;" title = "Edit Veg-Washer Dosage Log"><i class="fa fa-edit"/></i></button> <button type="button" id="'
                                + data + '" class = "text-danger btnDelete"  style="background:transparent !important;" title = "Delete Veg-Washer Dosage Log"><i class="fa fa-trash"/></i></button>'
                        }
                    }
                ]
            });
            //t.on('order.dt search.dt', function () {
            //    let i = 1;

            //    t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
            //        this.data(i++);
            //    });
            //}).draw();
        });

        $(document).on("click", ".btnEdit", function () {
                    var id = $(this).attr("id");
                    window.location.href = '@Url.Action("EditVegWasherDosageLog", "VegWasherDosageLog", new { Id = "Id"})'.replace("Id", parseInt(id));
