                                </div>
                                <div class="col-md-2">
                                    <a href="@Url.Action("AddVegWasherDosageLog","VegWasherDosageLog")" class="btn btn-sm btn-primary pull-right btn-addnew" style="float: right; margin-top:12%; background: linear-gradient(85deg, #392c70, #6a005b);">
                                        <span class="fa fa-plus"></span> Veg-Washer Dosage Log
                                    </a>
                                </div>
                            </div>
                            <table id="VegWasherDosageLogdt" class="table table-striped table-bordered hover table-sm table-responsive-md" width="100%" style="table-layout: fixed;">
                                <thead>
                                    <tr style="border:medium">
                                        <th rowspan="2">@Html.DisplayName("Date")</th>
                                        <th colspan="3">@Html.DisplayName("Veg Washer-1")</th>
                                        <th colspan="3">@Html.DisplayName("Veg Washer-2")</th>
                                        <th rowspan="2">@Html.DisplayName("Verify By")</th>
                                        <th rowspan="2">@Html.DisplayName("Actions")</th>
                                    </tr>
                                    <tr>

                                        <th>@Html.DisplayName("Solution-A (ml)")</th>
                                        <th>@Html.DisplayName("Solution-B (ml)")</th>
                                        <th>@Html.DisplayName("Name of Item")</th>

                                        <th>@Html.DisplayName("Solution-A (ml)")</th>
                                        <th>@Html.DisplayName("Solution-B (ml)")</th>
                                        <th>@Html.DisplayName("Name of Item")</th>


                                    </tr>
                                </thead>
                                <tbody class="text-center"></tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@Html.Raw(TempData["Success"])

@section scripts{

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" type="text/css" />
